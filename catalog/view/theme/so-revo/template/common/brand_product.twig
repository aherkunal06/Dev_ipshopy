{% if brands %}
<div class="brand-product-section">
  {% for brand in brands %}
    <div class="brand-header-row">
      <h3>{{ brand.brand_name }}</h3>
      <a href="{{ brand.view_all }}" class="view-all">View All</a>
    </div>

    <div class="brand-product-row">
      {% for product in brand.products %}
        <div class="simple-card">
          <a href="{{ product.href }}">
            <img src="{{ product.image }}" alt="{{ product.name }}" class="simple-card-image" />
            <div class="simple-card-name">
              {{ product.name|length > 30 ? product.name|slice(0, 30) ~ '...' : product.name }}
            </div>
            <div class="simple-card-price">
          {% if product.special %}
            <span class="price-old" style="text-decoration: line-through; color: #888;">{{ product.price }}</span>
            <span class="price-new" style="color: #d32f2f; font-weight: bold;">{{ product.special }}</span>
          {% else %}
            <span class="price-regular">{{ product.price }}</span>
          {% endif %}
        </div>
          </a>
        </div>
      {% endfor %}
    </div>
  {% endfor %}
</div>
{% endif %}

<style>
.brand-product-section {
  padding: 20px;
}

.brand-header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 15px 10px 10px;
}

.brand-header-row h3 {
  font-size: 22px;
  font-weight: bold;
  color: black;
  margin: 0;
}

.brand-header-row .view-all {
  color: #953A93;
  text-decoration: none;
  font-weight: 500;
}

/* === Updated to use CSS Grid === */
.brand-product-row {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 16px;
  margin-bottom: 30px;
}

.simple-card {
  background: white;
  border-radius: 10px;
  box-shadow: 0 1px 6px rgba(0,0,0,0.1);
  text-align: center;
  transition: 0.3s ease;
  overflow: hidden;
}

.simple-card a {
  text-decoration: none;
  color: inherit;
}

.simple-card:hover {
  box-shadow: 0 3px 10px rgba(0,0,0,0.15);
}

.simple-card-image {
  width: 100%;
  height: 180px;
  object-fit: contain;
  padding: 10px;
}

.simple-card-name {
  background-color: #f7f7f7;
  padding: 8px 10px 0;
  font-size: 14px;
  color: #333;
  font-weight: 500;
  height: 45px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.simple-card-price {
  color: #953A93;
  font-weight: 600;
  font-size: 15px;
  padding-bottom: 12px;
  background-color: #f7f7f7;
}

/* üì± Mobile (2 cards) */
@media (max-width: 575px) {
  .brand-product-row {
    grid-template-columns: repeat(2, 1fr);
  }

  .simple-card-image {
    height: 120px; 
    padding: 6px;  
  }

  .simple-card-name {
    padding: 4px 6px 0;
    font-size: 13px;
    height: 35px;
  }

  .simple-card-price {
    font-size: 13.5px; 
    padding-bottom: 8px;
  }
}

/* üü° Tablet Small (2 cards) */
@media (min-width: 576px) and (max-width: 767px) {
  .brand-product-row {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* üü† Tablet Large (3 cards) */
@media (min-width: 768px) and (max-width: 991px) {
  .brand-product-row {
    grid-template-columns: repeat(3, 1fr);
  }
}

/* üíª Laptop (4 cards) */
@media (min-width: 992px) and (max-width: 1199px) {
  .brand-product-row {
    grid-template-columns: repeat(3, 1fr);
  }
}

/* üñ•Ô∏è Large screens (6 cards) */
@media (min-width: 1200px) {
  .brand-product-row {
    grid-template-columns: repeat(6, 1fr);
  }
}
</style>
