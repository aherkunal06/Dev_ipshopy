/* Container for side icons */
.product-grid .product-card .side-icons {
  position: absolute;
  top: 15px;
  right: 8px;
  display: flex;
  flex-direction: column;
  gap: 6px;
  pointer-events: none; /* Prevent hover outside */
}

/* Individual icon buttons */
.product-grid .product-card .side-icons .icon {
  background: #953A93;
  color: white;
  border-radius: 50%;
  width: 28px;
  height: 28px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 13px;
  pointer-events: auto; /* Enable button clicks */
  transform: translateX(30px); /* start hidden to the right */
  opacity: 0;
  transition: transform 0.3s ease, opacity 0.3s ease;
  border:none;
}

/* On hover: icons slide in from the right */
.product-card:hover .side-icons .icon {
  transform: translateX(0);
  opacity: 1;
}
.product-grid .product-card .side-icons .icon:nth-child(1) {
  transition-delay: 0.1s;
}
.product-grid .product-card .side-icons .icon:nth-child(2) {
  transition-delay: 0.2s;
}
.product-grid .product-card .side-icons .icon:nth-child(3) {
  transition-delay: 0.3s;
}
