<div id="product-visual-search" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  
{% if results %}
  <div class="product-grid">
    {% for result in results.results %}
<div class="product-card">
  <div class="image-wrapper">
      <a href="{{ result.product_url }}">
    <img src="{{ result.image_url }}" alt="{{ result.product_name }}" class="product-image" />
    </a>
    <div class="discount-badge">-{{ result.discount_percentage|round }}%</div>

    <div class="side-icons">
        
     <button class="wishlist btn-button icon" type="button" title="{{ button_wishlist }}" onclick="wishlist.add('{{ result.product_id }}');"> <span ><i class="fa fa-heart-o"></i></span></button>
     <button class="compare btn-button icon" type="button" title="{{ button_compare }}" onclick="compare.add('{{ result.product_id }}');"> <span ><i class="fa fa-exchange"></i></span></button>
      {#<span class="icon"><i class="fa fa-search"></i></span>#}
    </div>
  </div>

  <div class="product-info">
      <a href="{{ result.product_url }}">
    <div class="product-name">{{ result.product_name|slice(0, 25) ~ '...' }}</div>
</a>
    <div class="price-or-cart">
      <div class="price-block">
        <span class="product-price">₹{{ result.special_price }}</span>
        <span class="product-mrp">₹{{ result.mrp_price }}</span>
      </div>
      <button class="add-to-cart-btn" data-product-id="{{ result.product_id }} " onclick="cart.add('{{ result.product_id }}', '{{ 1 }}');">Add to Cart</button>
    </div>
  </div>
</div>



    {% endfor %}
  </div>
{% else %}
  <p>No visual search results found.</p>
{% endif %}


