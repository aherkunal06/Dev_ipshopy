<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
<link rel="stylesheet" href="catalog/view/theme/default/stylesheet/customer/account/sidebar.css">

<!-- Menu Icon: only for mobile -->
<button class="menu-icon" onclick="toggleMenu()">
  <i class="fa-solid fa-bars"></i>
</button>

<!-- Sidebar Menu -->
<div class="sidebar-menu" id="accountMenu">
  <!-- Close Button (mobile only) -->
  <button class="close-btn" onclick="toggleMenu()">
    <i class="fa-solid fa-xmark"></i>
  </button>

  {% if not logged %} 
    <a href="{{ login }}"><i class="fa-regular fa-user"></i> {{ text_login }}</a>  
    <a href="{{ register }}"><i class="fa-solid fa-file"></i> {{ text_register }}</a>
    <a href="{{ forgotten }}"><i class="fa-solid fa-key"></i> {{ text_forgotten }}</a>
  {% endif %}

  <a href="{{ account }}"><i class="fa-regular fa-user"></i> {{ text_account }}</a>

  {% if logged %} 
    <!-- <a href="{{ edit }}"><i class="fa-regular fa-pen-to-square"></i> {{ text_edit }}</a> -->
    <a href="{{ password }}"><i class="fa-solid fa-lock"></i> {{ text_password }}</a>
  {% endif %} 

  <a href="{{ address }}"><i class="fa-regular fa-address-book"></i> {{ text_address }}</a>
  <a href="{{ wishlist }}"><i class="fa-regular fa-heart"></i> {{ text_wishlist }}</a>
  <a href="{{ order }}"><i class="fa-solid fa-truck"></i> {{ text_order }}</a>
  <a href="{{ download }}"><i class="fa-solid fa-download"></i> {{ text_download }}</a>
  <a href="{{ reward }}"><i class="fa-solid fa-gift"></i> {{ text_reward }}</a>
  <a href="{{ return }}"><i class="fa-solid fa-reply"></i> {{ text_return }}</a>
  <a href="{{ transaction }}"><i class="fa-solid fa-credit-card"></i> {{ text_transaction }}</a>
  <a href="{{ newsletter }}"><i class="fa-regular fa-newspaper"></i> {{ text_newsletter }}</a>

  {% if logged %} 
    <a href="{{ logout }}" class="logout"><i class="fa-solid fa-arrow-right-from-bracket"></i> {{ text_logout }}</a>
  {% endif %}
</div>

<script>
  function toggleMenu() {
    document.getElementById("accountMenu").classList.toggle("active");
  }
</script>

