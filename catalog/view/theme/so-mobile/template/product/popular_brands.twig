<div class="popular-brands-section">
  <div class="popular-brands-header">
    <h3 class="section-title">Popular Brands</h3>
    <a href="{{ view_all_url }}" class="view-all-link">View All</a>
  </div>

  <div class="swiper popular-brands-slider">
    <div class="swiper-wrapper">
      {% for brand in brands %}
        <div class="swiper-slide">
          <div class="brand-card">
            <img src="{{ brand.image }}" alt="{{ brand.name }}" />
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>


<style>
.popular-brands-section {
  margin-top: 20px;
  padding: 10px;
}
.section-title {
  font-size: 15px;
  font-weight: 600;
  margin-bottom: 10px;
}

.brand-card {
  border: 1px solid #e5c1f2;
  padding: 10px;
  border-radius: 10px;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.brand-card img {
  max-width: 100%;
  max-height: 50px;
  object-fit: contain;
}
.popular-brands-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}
.category-view-all-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
}
.view-all-link {
  font-size: 12px;
  color: #610771;
  text-decoration: none;
  font-weight: 500;
}

</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css"/>
<script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
<script>
  var swiper = new Swiper('.popular-brands-slider', {
    slidesPerView: 3,
    spaceBetween: 10,
    loop: true,
    autoplay: {
      delay: 2500,
      disableOnInteraction: false,
    },
    breakpoints: {
      480: {
        slidesPerView: 3,
      },
      768: {
        slidesPerView: 5,
      },
      1024: {
        slidesPerView: 6,
      }
    }
  });
</script>
