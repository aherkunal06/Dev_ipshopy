<link rel="stylesheet" href="catalog/view/theme/default/stylesheet/customer/product/category_group.css">

<style>
  /* Background + readability helpers (safe to keep even with your CSS file) */
  .category-group-wrapper {
    background-image: url('image/catalog/festival/diwali-bg.png'); /* <-- your site path */
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    position: relative;
    margin-top: 40px;
    padding: 24px 16px;   /* gives the background room to show */
    /* border-radius: 12px;   */
  }

  /* Optional soft overlay so text stays readable on bright images */
  .category-group-wrapper::before {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.12); /* tweak opacity as needed */
    pointer-events: none;
    border-radius: inherit;
  }

  /* Make inner content sit above the overlay */
  /* .category-group-wrapper .category-groups-container {
    position: relative;
    z-index: 1;
    background: rgba(255,255,255,0.65); 
    backdrop-filter: blur(2px);        
    -webkit-backdrop-filter: blur(2px);
    border-radius: 10px;
    padding: 12px;
  } */
</style>

<div class="category-group-wrapper">
  <!-- Combined outer box -->
  <div class="category-groups-container">
    <div style="overflow: hidden; padding-inline: 0;">
      {% if group_title %}
        <h3 class="section-title">{{ group_title }}</h3>
      {% endif %}
      {% if view_all_href %}
        {# <a href="{{ view_all_href }}" class="view-all">View All ></a> #}
      {% endif %}
    </div>

    <div class="category-groups-row">
      {% for group in category_groups %}
        <div class="category-group-section{% if not loop.last %} with-divider{% endif %}">
          <h2>{{ parent_name }}</h2>

          <div class="category-card-grid">
            {% for category in group.categories %}
              <a href="{{ category.href }}" class="category-card">
                <div class="card-image">
                  <img src="{{ category.product_image }}" alt="{{ category.category_name }}">
                </div>
                <div class="card-body">
                  <div class="price">{{ category.price }}</div>
                  <div class="name">{{ category.category_name }}</div>
                </div>
              </a>
            {% endfor %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
