<h2>Independence Day Specials</h2>
<div class="row">
    {% for product in products %}
        <div class="col-md-3 col-6 mb-3">
            <div class="card" style="border: 2px solid green; border-radius: 8px;">
                <img src="{{ product.thumb }}" class="card-img-top" alt="{{ product.name }}">
                <div class="card-body text-center">
                    <h6>{{ product.name }}</h6>
                    <p>
                        <span style="color: orange; font-weight: bold;">{{ product.special }}</span>
                        <del>{{ product.price }}</del>
                    </p>
                    <span class="badge bg-success">{{ product.discount }}</span>
                    <a href="{{ product.href }}" class="btn btn-primary btn-sm mt-2">View Product</a>
                </div>
            </div>
        </div>
    {% else %}
        <p>No products found.</p>
    {% endfor %}
</div>
