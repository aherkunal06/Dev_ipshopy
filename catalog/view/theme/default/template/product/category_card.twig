<link rel="stylesheet" href="catalog/view/theme/default/stylesheet/customer/product/category_card.css">

<div class="category-card-section" style="background-color: {{ bg_color }};">
  <h3 class="category-title">{{ title }}</h3>
  <p class="category-subtitle">{{ subtitle }}</p>

  {% if main_product %}
    <div class="main-image">
      <a href="{{ main_product.href }}">
        <img src="{{ main_product.image }}" alt="">
      </a>
    </div>
  {% endif %}

  {% if related %}
    <div class="related-thumbs">
      {% for product in related %}
        <a href="{{ product.href }}">
          <img src="{{ product.image }}" alt="">
        </a>
      {% endfor %}
    </div>
  {% endif %}
</div>
