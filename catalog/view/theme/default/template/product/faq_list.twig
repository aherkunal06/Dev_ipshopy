<div class="container-fluid">
  <div class="faq-container">
    <!-- Product Info -->
    <div class="faq-left-product">
      <a href="{{ product.href }}">
        <img src="{{ product.thumb }}" alt="{{ product.name }}">
      </a>
      <h4>{{ product.name }}</h4>
      {% if product.price %}
      <div class="price">{{ product.price }}</div>
      {% endif %}
      <a href="{{ product.href }}" class="btn btn-sm btn-outline-primary mt-2">Back to Product</a>
    </div>

    <!-- FAQ List -->
    <div class="faq-right-content">
      <h2>Questions and Answers</h2>

      <!-- Search Box -->
      <div class="faq-search-box mb-4">
        <input type="text" id="faq-search-input" placeholder="Search for answers..." class="form-control" />
      </div>

      {% if product_faqs %}
      <div id="faq-list">
        {% for faq in product_faqs %}
        <div class="faq-item" data-index="{{ loop.index0 }}" style="{% if loop.index > 4 %}display:none;{% endif %}">
          <div class="faq-question">Q: {{ faq.question }}</div>
          <div class="faq-answer">A: {{ faq.answer }}</div>
        </div>
        {% endfor %}
      </div>

      {% if product_faqs|length > 4 %}
      <div class="text-center mt-3">
        <button id="load-more-faqs" class="btn btn-outline-primary faq-load-more-btn pull-right">Show More</button>
      </div>
      {% endif %}


      {% else %}
      <p>No FAQs found for this product.</p>
      {% endif %}
    </div>
    <div id="no-results-box" style="display: none; text-align: center; margin-top: 20px;">
      <p class="text-muted mb-2">No matching questions found.</p>
      <button id="ask-question-btn" class="btn btn-primary">Ask a Question</button>
    </div>
  </div>
</div>

{{ footer }}
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const faqItems = document.querySelectorAll('#faq-list .faq-item');
    const loadMoreBtn = document.getElementById('load-more-faqs');
    const searchInput = document.getElementById('faq-search-input');
    const noResultsBox = document.getElementById('no-results-box');
    let visibleCount = 4;

    function showInitialFaqs() {
      faqItems.forEach((item, index) => {
        item.style.display = index < visibleCount ? 'block' : 'none';
      });

      if (loadMoreBtn) {
        loadMoreBtn.style.display = visibleCount < faqItems.length ? 'inline-block' : 'none';
      }
    }

    // Show initial set
    showInitialFaqs();

    if (loadMoreBtn) {
      loadMoreBtn.addEventListener('click', function () {
        visibleCount += 4;
        showInitialFaqs();
      });
    }

    searchInput.addEventListener('input', function () {
      const query = this.value.trim().toLowerCase();
      let matchCount = 0;

      if (query === '') {
        visibleCount = 4;
        showInitialFaqs();
        if (noResultsBox) noResultsBox.style.display = 'none';
        return;
      }

      faqItems.forEach(item => {
        const answer = item.querySelector('.faq-answer').innerText.toLowerCase();
        const matches = answer.includes(query);
        item.style.display = matches ? 'block' : 'none';
        if (matches) matchCount++;
      });

      // Show Ask Question only if nothing matches
      if (noResultsBox) {
        noResultsBox.style.display = matchCount === 0 ? 'block' : 'none';
      }

      // Hide Show More during search
      if (loadMoreBtn) {
        loadMoreBtn.style.display = 'none';
      }
    });
  });
</script>









