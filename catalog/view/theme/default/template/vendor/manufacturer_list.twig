                        {% if manufacturer.comment_thread %}
                            <a href="index.php?route=vendor/manufacturer/replyForm&manufacturer_id={{ manufacturer.manufacturer_id }}&user_token={{ user_token }}" 
                               class="btn btn-warning btn-sm" 
