<script type="text/javascript">
  // Filter button click logic
  $('#button-filter').on('click', function () {
    var url = 'index.php?route=vendor/manufacturer';

    var filter_name = $('input[name="filter_name"]').val();
    if (filter_name) {
      url += '&filter_name=' + encodeURIComponent(filter_name);
    }

    var filter_status = $('select[name="filter_status"]').val();
    if (filter_status !== '') {
      url += '&filter_status=' + encodeURIComponent(filter_status);
    }

    location = url;
  });

  // Autocomplete for filter_name
  $('input[name="filter_name"]').autocomplete({
    'source': function (request, response) {
      $.ajax({
        url: 'index.php?route=vendor/manufacturer/autocomplete&user_token={{ user_token }}&filter_name=' + encodeURIComponent(request),
        dataType: 'json',
        success: function (json) {
          response($.map(json, function (item) {
            return {
              label: item['name'],
              value: item['manufacturer_id']
            };
          }));
        }
      });
    },
    'select': function (item) {
      $('input[name="filter_name"]').val(item['label']);
    }
  });

  // View comment modal logic
  $(document).on('click', '.view-comment', function () {
    var manufacturerId = $(this).data('manufacturer');
    $('#commentModal .modal-content').html('<div class="text-center p-4">Loading...</div>');

    $.ajax({
      url: 'index.php?route=catalog/manufacturer/viewComment&manufacturer_id=' + manufacturerId + '&user_token={{ user_token }}',
      dataType: 'html',
      success: function (html) {
        $('#commentModal .modal-content').html(html);
        $('#commentModal').modal('show');
      },
      error: function () {
        $('#commentModal .modal-content').html('<div class="text-danger p-3">Failed to load comments.</div>');
      }
    });
  });
</script>

