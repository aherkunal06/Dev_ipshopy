<script>
document.addEventListener("DOMContentLoaded", function () {
    const faqItems = document.querySelectorAll(".faq-item");

    faqItems.forEach(item => {
        const title = item.querySelector(".faq-title");
        const sign = title.querySelector(".faq-sign");

        title.addEventListener("click", () => {
            const isActive = item.classList.contains("active");

            // If the clicked item is active, close it
            if (isActive) {
                item.classList.remove("active");
                item.querySelector(".faq-content").style.display = "none";
                sign.textContent = "+"; // Reset to "+"
            } else {
                // Close all other items
                faqItems.forEach(i => {
                    i.classList.remove("active");
                    i.querySelector(".faq-content").style.display = "none";
                    i.querySelector(".faq-title .faq-sign").textContent = "+"; // Reset all to "+"
                });

                // Open the clicked item and set its sign to "−"
                item.classList.add("active");
                item.querySelector(".faq-content").style.display = "block";
                sign.textContent = "−"; // Change to "−"
            }
        });
    });

    // Ensure the first item has the "+" sign initially and is closed
    const firstItem = faqItems[0];
    const firstSign = firstItem.querySelector(".faq-sign");
    firstSign.textContent = "+";  // Make sure it starts with "+"
    firstItem.querySelector(".faq-content").style.display = "none"; // Hide content initially
});
</script>
