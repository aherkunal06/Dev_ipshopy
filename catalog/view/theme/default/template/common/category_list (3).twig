  <!-- Swiper CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"/>
  <link rel="stylesheet" href="catalog/view/theme/default/stylesheet/customer/common/first_categories.css"/>
<link rel="stylesheet" href="catalog\view\theme\default\stylesheet\variables.css">
<style>
      .trapzone-wrapper {
        width: 100px;
        height: 90px;
        /* filter: drop-shadow(1px 1px 2px rgba(174, 144, 198, 0.25)); */
        filter: drop-shadow(1px 1px 2px rgba(225, 225, 225, 1));
      }

      .trapzone {
        width: 100%;
        height: 100%;
        /* background: #f6edff; */
        background: #f7f0fb;
        position: relative;
        -webkit-mask: url(#trapezoidMask);
        mask: url(#trapezoidMask);
        -webkit-mask-repeat: no-repeat;
        mask-repeat: no-repeat;
        -webkit-mask-size: 100% 100%;
        mask-size: 100% 100%;
        overflow: hidden;
      }
      .trapzone::before {
        content: "";
        position: absolute;
        inset: 0;
        box-shadow: inset 4px 4px 8px rgba(174, 144, 198, 0.1),
          inset -4px -4px 8px rgba(255, 255, 255, 0.8);
        pointer-events: none;
      }
    </style>

 <!-- SVG Mask Definition -->
    <svg width="0" height="0">
      <defs>
        <mask id="trapezoidMask" x="0" y="0" width="1" height="1">
          <rect width="100%" height="100%" fill="black" />
          <path
            d="
      M 30 0
      Q 0 0 0 30
      L 6 70
      Q 10 90 28 90
      L 72 90
      Q 90 90 94 70
      L 100 30
      Q 100 0 70 0
      Z
    "
            fill="white"
          />
        </mask>
      </defs>
    </svg>
  <div class="py-3 category_swiper">
    {#<h4 class="text-center mb-3">Shop by Category</h4>#}

    <!-- Swiper -->
    <div class="swiper mySwiper category_swiper" style='padding-top:0px !important;'>
      <div class="swiper-wrapper" style='gap:10px;'>
        {% for category in categories %}
            <!-- Category Items -->
            <div >
                
            <div class="trapzone-wrapper">
        <div class="trapzone">
            <a href="{{category.link}}" class="swiper-slide text-decoration-none" style='height:auto; box-shadow:none; background:transparent;'>
                <div class='category_image_wrapper'>
                  <img src="{{category.src}}" alt="{{category.title}}" style='width:80px;height:80px;'>
                </div>
            </a>
            </div>
            </div>
                <div style='text-align:center; color:black; padding-top:5px;'>{{category.title}}</div>
            </div>
        {% endfor %}

      </div>

      <!-- Arrows -->
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>
  </div>

  <!-- Swiper JS -->
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

  <!-- Swiper Init -->
    <script>
    var swiper = new Swiper(".mySwiper", {
      loopFillGroupWithBlank: true,
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
      slidesPerView: 4,
      slidesPerGroup: 4,
      spaceBetween: 8,
      grabCursor: true,
      breakpoints: {
        768: {
          slidesPerView: 6,
          slidesPerGroup: 6,
          spaceBetween: 8
        },
        992: {
          slidesPerView: 8,
          slidesPerGroup: 8,
          spaceBetween: 10
        },
        1200: {
          slidesPerView: 10,
          slidesPerGroup: 10,
          spaceBetween: 10
        }
      }
    });
  </script>


