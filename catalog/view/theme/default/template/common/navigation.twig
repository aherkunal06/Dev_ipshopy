<body>


<nav class="navbar">
  <div class="container">
    <button id="menu-toggle" class="menu-toggle">☰</button>
    <ul class="nav-menu">
    <li></li>
    </ul>
  </div>
</nav>



<script>
document.addEventListener("DOMContentLoaded", function () {


  fetch('index.php?route=common/navigation/categoriesJson')
    .then(response => response.json())
    .then(data => {
      document.querySelector('.nav-menu').innerHTML = buildMenu(data);
    });

  function buildMenu(categories) {
    let html = "";
     html += `<li class="nav-item">
             <a href="index.php?route=common/home">Home</a>
           </li>`;
    categories.forEach(cat => {
      html += `<li class="nav-item">
                <a href="${cat.href}">
                  ${cat.name}
                  ${cat.children && cat.children.length > 0 ? '<span class="toggle-icon">+</span>' : ''}
                </a>`;
      if (cat.children && cat.children.length > 0) {
        html += `<ul class="dropdown">`;
        cat.children.forEach(subcat => {
          html += `<li>
                    <a href="${subcat.href}">
                      ${subcat.name.slice(0, 20)}${subcat.name.length > 30 ? '...' : ''}
                    </a>`;
          if (subcat.children && subcat.children.length > 0) {
            html += `<ul class="sub-dropdown">`;
            subcat.children.forEach(child => {
              html += `<li><a href="${child.href}">${child.name}</a></li>`;
            });
            html += `</ul>`;
          }
          html += `</li>`;
        });
        html += `</ul>`;
      }
      html += `</li>`;
    });
    return html;
  }

  const navMenu = document.querySelector(".nav-menu");
  const toggleBtn = document.querySelector("#menu-toggle");


toggleBtn.addEventListener("click", function (e) {
  e.stopPropagation(); 
  navMenu.classList.add("open");
  toggleBtn.classList.add("hidden"); 
});


document.addEventListener("click", function (e) {

  if (!e.target.closest('.nav-menu')) {
    navMenu.classList.remove("open");
    toggleBtn.classList.remove("hidden");
  }
});


toggleBtn.addEventListener('click', function(e) {
  e.stopPropagation();
});

  document.addEventListener("click", function (e) {
    const link = e.target.closest(".nav-item > a");
    if (link) {
      const submenu = link.parentElement.querySelector(".dropdown");
      const icon = link.querySelector(".toggle-icon");

      if (submenu) {
        e.preventDefault();
        e.stopPropagation();

        document.querySelectorAll(".nav-item .dropdown").forEach(drop => {
          if (drop !== submenu && drop.style.display === "block") {
            drop.style.display = "none";
            const otherLink = drop.parentElement.querySelector("a");
            const otherIcon = otherLink.querySelector(".toggle-icon");
            if (otherIcon) otherIcon.textContent = "+";
            otherLink.classList.remove("active");
          }
        });

        if (submenu.style.display === "block") {
          submenu.style.display = "none";
          if (icon) icon.textContent = "+";
          link.classList.remove("active");
        } else {
          submenu.style.display = "block";
          if (icon) icon.textContent = "–";
          link.classList.add("active");
        }
      }
    }
  });

});
</script>

