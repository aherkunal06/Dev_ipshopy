  .navbar {
    background: transparent !important;
  }
  .nav-menu { 
    display: block;
    position: fixed;
    top: 0;
    left: -260px;
    width: 260px;
    height: 100%;
    background: #fff;
    overflow-y: auto;
    transition: left 0.3s ease;
    flex-direction: column;
    padding-top: 50px;
    z-index: 10000;
  }
  .nav-menu.open { left: 0; }
  .nav-item > a { 
    color: #7d2c91; 
    font-size: 14px;
    font-weight: bold;
    border-bottom: 1px solid #ddd; 
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .nav-item > a.active {
    background: #7d2c91;
    color: #fff !important;
  }
  .dropdown, .sub-dropdown { 
    position: static; 
    background: #fff;
    display: none;
    padding-left: 15px;
  }
  .dropdown li a.active {
    background: #7d2c91;
    color: #fff !important;
  }
}
.menu-toggle.hidden {
  display: none !important;
}
