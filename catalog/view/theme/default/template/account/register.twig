	function validatedtext(input) {
		// Remove leading spaces from the input value
		input.value = input.value.replace(/^\s+/, '');
		
		// Prevent consecutive spaces
		input.value = input.value.replace(/\s{2,}/g, ' ');
	}

	document.addEventListener("DOMContentLoaded", function () {
		// Add event listeners to all input fields to prevent spaces
		const inputFields = document.querySelectorAll('input[type="text"], input[type="email"], input[type="number"], input[type="password"]');
		
		inputFields.forEach(function(input) {
			input.addEventListener('input', function() {
				preventSpaces(this);
