
{{ header }}

<style>
.ticket-wrapper {
    max-width: 1100px;
    margin: 30px auto;
    font-family: 'Segoe UI', sans-serif;
}
.ticket-card {
    background: #fff;
    border: 1px solid #eee;
    border-radius: 12px;
    padding: 25px 30px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}
.ticket-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}
.ticket-header h1 {
    font-size: 22px;
}
.status-badge {
    background: #e6f4ea;
    color: #218739;
    font-size: 13px;
    padding: 3px 10px;
    border-radius: 10px;
    display: inline-block;
}
.ticket-info {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    margin-bottom: 20px;
}
.ticket-box {
    flex: 1;
    min-width: 280px;
    padding: 15px;
    background: #fafafa;
    border: 1px solid #eee;
    border-radius: 8px;
}
.ticket-section {
    margin-top: 20px;
}
.ticket-section h4 {
    margin-bottom: 8px;
    font-size: 16px;
}
.ticket-section p {
    margin: 0;
}
.attachment-preview img {
    max-width: 120px;
    margin-top: 10px;
    border: 2px solid #ccc;
    border-radius: 6px;
}
.reply {
    background: #f6f8fa;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 15px;
    border-left: 4px solid #007bff;
}
.reply small {
    display: block;
    margin-top: 6px;
    color: #777;
}
.reply img {
    max-width: 100px;
    margin-top: 10px;
    border: 1px solid #ccc;
    border-radius: 6px;
}
.reply-form textarea {
    width: 100%;
    height: 100px;
    padding: 10px;
    margin-top: 10px;
    border: 1px solid #ddd;
    border-radius: 6px;
}
.reply-form input[type="file"] {
    display: block;
    margin: 10px 0;
}
.reply-form button {
    background: #9c0d85;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
}
.reply-form button:hover {
    background: #0056b3;
}
.conversation-header {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 15px;
}

</style>

<div style='display:flex; gap:20px; margin-inline:20px;'>
    {{column_left_account}}
<div class="ticket-wrapper">
  <a href="javascript:history.back()" class="btn btn-secondary" style="float: right; margin-bottom: 20px; background-color: #9c0d85; color: white; border: none;">
    ← Back
</a>
    
    <div class="ticket-card">
        <!-- rest of your ticket view -->

<div class="ticket-wrapper">
    <div class="ticket-card">
        <div class="ticket-header">
            <h1>Ticket Details #{{ ticket.ticket_id }}</h1>
            <span class="status-badge">{{ status }}</span>
        </div>

        <div class="ticket-info">
            <div class="ticket-box">
                <p><strong>Ticket ID:</strong> {{ ticket.ticket_id }}</p>
                <p><strong>Customer Name:</strong> {{ ticket.customer_name }}</p>

                <p><strong>Date Added:</strong> {{ ticket.date_added }}</p>
                
            </div>
            <div class="ticket-box">
                {# <p><strong>Seller Name:</strong> {{ ticket.seller_name is defined ? ticket.seller_name : '-' }}</p> #}
                {# <p><strong>Email:</strong> designer@example.com</p> #}
                {# <p><strong>Department:</strong> Design Team</p> #}
                <div class="ticket-section">
                    <h4>Subject</h4>
                    <p>{{ ticket.subject }}</p>
                </div>
<p><strong>Category:</strong> {{ category }}</p>

            </div>
        </div>

      

        <div class="ticket-section">
            <h4>Attachments</h4>
            {% if ticket.file %}
                <a class="attachment-preview" href="/image/ticket_uploads/{{ ticket.file }}" target="_blank">
                    <img src="/image/ticket_uploads/{{ ticket.file }}">
                </a>
            {% else %}
                <p>-</p>
            {% endif %}
        </div>

        <div class="ticket-section">
          

            <div class="ticket-section">
    <h2 style="margin-bottom: 15px;">Conversation History</h2>
    {% if replies %}
        {% for reply in replies %}
            <div style="border: 1px solid #e0e0e0; background: #f9f9f9; padding: 15px 20px; border-radius: 8px; margin-bottom: 15px;">
                <div style="margin-bottom: 8px;">
                    <strong style="color: #333;">
                        {{ reply.user_type == 'admin' ? 'Admin' : 'You' }}
                    </strong>
                    <span style="float:right; font-size: 12px; color: #777;">
                        {{ reply.date_added }}
                    </span>
                </div>
                <div style="margin-bottom: 10px; color: #444;">
                    {{ reply.message }}
                </div>
                {% if reply.file %}
                    <div>
                        <a href="/image/ticket_uploads/{{ reply.file }}" target="_blank">
                            <img src="/image/ticket_uploads/{{ reply.file }}" style="max-width: 100px; border: 1px solid #ccc; padding: 4px; border-radius: 4px;">
                        </a>
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    {% else %}
        <p style="color: #888;">No replies yet.</p>
    {% endif %}
</div>

        </div>

       {# ✅ Updated Reply Section with status check #}
<div class="ticket-section reply-form">
    {% if status != 'Closed' %}
        <h4>Reply to Ticket</h4>
        <form action="{{ reply_action }}" method="post" enctype="multipart/form-data">
            <textarea name="message" required placeholder="Write your reply..."></textarea>
            <input type="file" name="file">
            <button type="submit">Send Reply</button>
        </form>
    {% else %}
        <div style="text-align: center; padding: 20px; background: #fff3f3; border: 1px solid #e0b4b4; border-radius: 6px;">
            <strong style="color: #a94442;">This ticket is closed. You cannot reply.</strong>
        </div>
    {% endif %}
</div>

    </div>
</div>
</div>
