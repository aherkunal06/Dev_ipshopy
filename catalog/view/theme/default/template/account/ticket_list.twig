<style>
.my-tickets-dashboard {
        /*max-width: 1200px;*/
        width:100%;
        margin: 30px auto;
        padding: 20px; /* Added padding to container for breathing room */
        font-family: 'Inter', sans-serif; /* Recommended font */
    }

    /* Header Section Styling */
    .header-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        flex-wrap: wrap; /* Allow wrapping on smaller screens */
        gap: 15px; /* Spacing between elements */
    }

    .header-left h3 {
        color: #9c0d85; /* Purple tone for heading */
        font-weight: 700;
        margin: 0;
        font-size: 28px; /* Larger title */
    }

    .header-right {
        display: flex;
        align-items: center;
        gap: 10px;
        flex-wrap: wrap; /* Allow buttons/search to wrap on smaller screens */
    }

    .search-filter-group {
        display: flex;
        gap: 10px;
        flex-grow: 1;
        max-width: 400px; /* Adjust max width for search and filter */
    }

    .search-input-wrapper {
        position: relative;
        flex-grow: 1;
    }

    .search-input {
        padding-left: 45px; /* Increased space for search icon */
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        height: 42px;
        font-size: 15px;
        width: 100%; /* Make input fill its container */
    }

    .search-icon {
        position: absolute;
        left: 20px; /* Adjusted icon position */
        top: 50%;
        transform: translateY(-50%);
        color: #888;
    }

    .filter-btn-header {
        background-color: #f0f0f0;
        color: #555;
        border: none;
        padding: 10px 15px;
        border-radius: 8px;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 5px;
        height: 42px;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

    .filter-btn-header:hover {
        background-color: #e5e5e5;
    }

    .create-ticket-btn {
        background-color: #9c0d85;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        transition: background-color 0.2s ease;
        height: 42px;
        white-space: nowrap; /* Prevent text wrapping */
    }

    .create-ticket-btn:hover {
        background-color: #82096f;
        color: white;
    }

    .dashboard-title {
        font-weight: 700;
        font-size: 26px;
        color: #1a1a1a;
    }

    .ticket-cards {
        display: flex;
        gap: 20px;
        width: 100%;
        margin-bottom: 20px;
        flex-wrap: wrap;
    }

    .ticket-card {
        flex: 1;
        min-width: 200px;
        padding: 20px;
        border-radius: 12px;
        background-color: #fff;
        box-shadow: 0 0 6px rgba(0,0,0,0.06);
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .ticket-card .icon {
        font-size: 22px;
        border-radius: 50%;
        padding: 12px;
        background: #f1f1f1;
        display: inline-block;
    }

    .ticket-card h5 {
        margin: 0;
        font-size: 22px;
        font-weight: bold;
    }

    .ticket-card span {
        font-size: 14px;
        color: #666;
    }

    .filter-tabs {
        margin-bottom: 15px;
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .filter-tab {
        padding: 8px 18px;
        background: #f4f4f4;
        border-radius: 10px;
        font-weight: 500;
        color: #444;
        text-decoration: none;
        border: 1px solid #e0e0e0;
    }

    .filter-tab.active {
        background: #9c0d85;
        color: #fff;
        border: none;
    }

    .ticket-table th {
        background: #9c0d85;
        color: white;
        font-weight: 600;
        text-align: center;
    }

    .ticket-table td {
        text-align: center;
        vertical-align: middle;
    }

    .ticket-image {
        width: 45px;
        height: 45px;
        object-fit: cover;
        border-radius: 8px;
    }

    .badge-status {
        border-radius: 12px;
        padding: 4px 10px;
        font-size: 12px;
        font-weight: 500;
        display: inline-block;
    }

    .status-open {
        background-color: #eee;
        color: #666;
    }

    .status-in-progress {
        background-color: #e4f1ff;
        color: #1565c0;
    }

    .status-closed {
        background-color:rgb(170, 238, 157);
        color:rgb(4, 19, 6);
    }

    .btn-create {
        background-color: #9c0d85;
        color: white;
        padding: 8px 16px;
        border-radius: 10px;
        font-weight: 500;
        border: none;
    }

    .btn-create:hover {
        background-color: #82096f;
    }

    .search-bar {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 20px;
    }

    .search-bar input {
        min-width: 280px;
        border-radius: 10px;
    }

    .text-purple {
        color: #9c0d85;
    }
    .table-hover tbody tr:hover {
        background-color: #9c0d85;
    }
    
    .table thead th {
      background: #9c0d85!important; /* Purple */
      color: #fff !important;         /* White text */
      font-weight: 700;
    }

    .action-link {
        color: #9c0d85;
        font-weight: 500;
    }
</style>
