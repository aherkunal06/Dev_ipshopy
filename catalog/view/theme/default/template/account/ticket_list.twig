<div class="my-tickets-dashboard">

    <!-- Header Row -->
    <div class="header-row">
        <div class="header-left">
            <h3>My Tickets</h3>
        </div>
        <div class="header-right">
            <form action="index.php" method="get" class="form-inline">
        <input type="hidden" name="route" value="account/ticket_list">
        <div style="display: flex; align-items: center; justify-content: space-between; gap: 12px; flex-wrap: wrap; ">
    
            <!-- Filter Form -->
            <form action="index.php" method="get" style="display: flex; align-items: center; gap: 0;">
                <input type="hidden" name="route" value="account/ticket_list">
                
                <div class="input-group" style="display: flex; align-items: center;">
                    <input 
                        type="text" 
                        name="ticket_id" 
                        value="{{ ticket_id_filter }}" 
                        placeholder="Enter Ticket ID..." 
                        class="form-control" 
                        style="height: 38px;"
                    >
                    <button 
                        type="submit" 
                        class="btn" 
                        style="background-color: #1e91cf; color: white; height: 38px; border-radius: 0 4px 4px 0;"
                    >
                        <i class="fa fa-search"></i> Filter
                    </button>
                </div>
            </form>
        
            <!-- Create Ticket Button -->
            <a href="index.php?route=account/ticket_form" 
               class="create-ticket-btn" 
               style="background-color: #a10086; color: white; padding: 8px 20px; border-radius: 6px; font-weight: bold; text-decoration: none; display: flex; align-items: center; height: 38px;">
                <i class="fa fa-plus-circle" style="margin-right: 6px;"></i> Create New Ticket
            </a>
    
        </div>
    
    </form>
        </div>
    </div>
        <div class="ticket-cards">
        <a href="{{ action_filter }}&status=all" class="ticket-card {{ status_filter == 'all' ? 'active' : '' }}">
            <div class="icon" style="background:#e6e8fd;"><i class="fa fa-ticket"></i></div>
            <div>
                <h5>{{ total_tickets }}</h5>
                <span>Total Tickets</span>
            </div>
        </a>
    
        <a href="{{ action_filter }}&status=Open" class="ticket-card {{ status_filter == 'Open' ? 'active' : '' }}">
            <div class="icon" style="background:#fff2c4;"><i class="fa fa-envelope-open"></i></div>
            <div>
                <h5>{{ open_count }}</h5>
                <span>Open Tickets</span>
            </div>
        </a>
    
        <a href="{{ action_filter }}&status=Pending" class="ticket-card {{ status_filter == 'Pending' ? 'active' : '' }}">
            <div class="icon" style="background:#d6ecff;"><i class="fa fa-hourglass-half"></i></div>
            <div>
                <h5>{{ pending_count }}</h5>
                <span>Pending</span>
            </div>
        </a>
    
        <a href="{{ action_filter }}&status=Closed" class="ticket-card {{ status_filter == 'Closed' ? 'active' : '' }}">
            <div class="icon" style="background:#d8fbd8;"><i class="fa fa-check-circle"></i></div>
            <div>
                <h5>{{ closed_count }}</h5>
                <span>Closed</span>
            </div>
        </a>
    
    </div>
    
        <!-- Tickets Table -->
        <table class="table ticket-table table-bordered">
            <thead>
                <tr>
                    {#<th><input type="checkbox" /></th>#}
                    <th>Ticket ID</th>
                    <th>Subject</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Status</th>
                    <th>Date Added</th>
                    <th>Category</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% if tickets %}
                    {% for ticket in tickets %}
                        <tr>
                            {#<td><input type="checkbox" /></td>#}
                            <td>{{ ticket.ticket_id }}</td>
                            <td>{{ ticket.subject }}</td>
                            <td>{{ ticket.description }}</td>
                            <td>
                                {% if ticket.file %}
                                    <img src="/image/ticket_uploads/{{ ticket.file }}" class="ticket-image" />
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td>
                                {% if ticket.status == 'Open' %}
                                    <span class="badge-status status-open">Open</span>
                                {% elseif ticket.status == 'Pending' %}
                                    <span class="badge-status status-in-progress">Pending</span>
                                {% elseif ticket.status == 'Closed' %}
                                    <span class="badge-status status-closed">Closed</span>
                                {% else %}
                                    {{ ticket.status }}
                                {% endif %}
                            </td>
                            <td>{{ ticket.date_added }}</td>
                            <td>{{ ticket.category }}</td>
                            <td><a href="index.php?route=account/ticket_view&ticket_id={{ ticket.ticket_id }}" class="action-link">View Ticket</a></td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr><td colspan="9">No tickets found.</td></tr>
                {% endif %}
            </tbody>
        </table>
    </div>
</div>


    <script>
    document.addEventListener('DOMContentLoaded', function () {
        console.log("JS Loaded ✅");
    
        document.getElementById('search-ticket-btn').addEventListener('click', function () {
            console.log("Filter button clicked ✅");
    
            const ticketId = document.getElementById('ticket-search-input').value.trim();
            console.log("Ticket ID: ", ticketId);
    
            fetch('index.php?route=account/ticket_list/filter&ticket_id=' + encodeURIComponent(ticketId))
                .then(response => response.text())
                .then(html => {
                    console.log("AJAX Success ✅");
                    document.getElementById('ticket-list-wrapper').innerHTML = html;
                })
                .catch(error => {
                    console.error("AJAX Error ❌", error);
                });
        });
    });
</script>

