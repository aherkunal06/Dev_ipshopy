          {#  </span>#}
          {#  {% if error_old_password %}#}
          {#    <div class="text-danger">{{ error_old_password }}</div>#}
          {#  {% endif %}#}
          {#</div>#}

          <!-- New Password -->
          <div class="form-group">
            <label class="form-label" for="input-password">Enter New Password <span class="text-danger">*</span></label>
            <div class='password_input_section'>
            <input type="password" name="password" value="{{ password }}" placeholder="Password" id="input-password" class="form-control" />
            <span class="toggle-password" onclick="togglePassword('input-password', this)">
              <i class="fa fa-eye-slash"></i>
            </span>
            </div>
            <small class="form-text text-muted">
              {#Password must be at least 8 characters long and include uppercase and special characters.#}
            </small>
            {% if error_password %}
              <div class="text-danger">{{ error_password }}</div>
            {% endif %}
          </div>

          <!-- Confirm Password -->
          <div class="form-group">
                  
            <label class="form-label" for="input-confirm">Confirm Password <span class="text-danger">*</span></label>
              <div class='password_input_section'>
            <input type="password" name="confirm" value="{{ confirm }}" placeholder="Confirm" id="input-confirm" class="form-control" />
            <span class="toggle-password" onclick="togglePassword('input-confirm', this)">
              <i class="fa fa-eye"></i>
            </span>
              </div>
            {% if error_confirm %}
              <div class="text-danger">{{ error_confirm }}</div>
            {% endif %}
          </div>

          <!-- Submit Button -->
          <button type="submit" class="btn btn-purple">{{ button_continue }}</button>
        </form>

