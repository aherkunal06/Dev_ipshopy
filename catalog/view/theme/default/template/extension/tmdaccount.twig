{{ header }}
<div class="container dashboard" id="accountdashboard">
	<div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">
		{{ content_top }}
		<div class="row">
			<div class="accountmenu-box col-sm-12">
				<div class="menu_bg">
					<div class="row allicon">
						{% if total_order %}
						<div class="col-md-3 col-sm-6 col-xs-6">
							<div class="totalorder">
								<a href="{{ order }}"><div class="icon-box">
									<span><i class="fa fa-shopping-cart" aria-hidden="true"></i>
									</span>
									<h5><b>{{ order_total }}</b> <br/>{{ text_total_order }}</h5>
								</div></a>
							</div>
						</div>
						{% endif %}
						{% if total_wishlist %}
						<div class="col-md-3 col-sm-6 col-xs-6">
							<div class="totalwishlist">
								<a href="{{ wishlist }}"><div class="icon-box">
									<span><i class="fa fa-heart" aria-hidden="true"></i></span>
									<h5><b>{{ wishlist_total }}</b><br/>{{ text_total_wishlist }} </h5>
								</div>
								</a>
							</div>
						</div>
						{% endif %}
						{% if total_reward %}
						<div class="col-md-3 col-sm-6 col-xs-6">
							<div class="totalreward">
								<a href="{{ reward }}"><div class="icon-box">
									<span><i class="fa fa-gift" aria-hidden="true"></i></span>
									<h5> <b>{{ points }}</b><br/>{{ text_reward_points }}</h5>
								</div></a>
							</div>
						</div>
						{% endif %}
						{% if total_download %}
						<div class="col-md-3 col-sm-6 col-xs-6">
							<div class="totaldownloads">
								<a href="{{ downloads }}"><div class="icon-box">
									<span><i class="fa fa-download" aria-hidden="true"></i></span>
									<h5> <b>{{ totaldownload }}</b><br/>{{ text_downloads }}</h5>
								</div></a>
							</div>
						</div>
						{% endif %}
						{% if total_transaction %}
						<div class="col-md-3 col-sm-6 col-xs-6">
							<div class="totaltransactions">
								<a href="{{ transactions }}"><div class="icon-box">
									<span><i class="fa fa-credit-card" aria-hidden="true"></i></span>
									<h5> <b>{{ totaltransaction }}</b><br/>{{ text_transations }}</h5>
								</div></a>
							</div>
						</div>
						{% endif %}
					</div>
		
					<div class="clearfix"></div>
					
					<div class="row icons">
						{% if link_editaccount %}
						<div class="col-md-3 col-sm-6 col-xs-6">
							<div class="white-box">
								<a href="{{ edit }}"><img class="img-responsive" src="catalog/view/theme/default/image/icon1.png" alt="{{ text_edit_account }}" title="{{ text_edit_account }}"/>
								<h4>{{ text_edit_account }}</h4></a>
							</div>
						</div>
						{% endif %}
						{% if link_password %}
						<div class="col-md-3 col-sm-6 col-xs-6">
							<div class="white-box">
							<a href="{{ password }}"><img class="img-responsive" src="catalog/view/theme/default/image/icon2.png" alt="{{ text_change_password }}" title="{{ text_change_password }}"/>
							<h4>{{ text_change_password }}</h4></a>
						</div>
						</div>
						{% endif %}
						{% if link_address_book %}
						<div class="col-md-3 col-sm-6 col-xs-6">
							<div class="white-box">
							<a href="{{ address }}"><img class="img-responsive" src="catalog/view/theme/default/image/icon3.png" alt="{{ text_address_book }}" title="{{ text_address_book }}"/>
							<h4>{{ text_address_book }}</h4></a>
						</div>
						</div>
						{% endif %}
						{% if link_wishlist %}
						<div class="col-md-3 col-sm-6 col-xs-6">
							<div class="white-box">
							<a href="{{ wishlist }}"><img class="img-responsive" src="catalog/view/theme/default/image/icon4.png" alt="{{ text_wishlist }}" title="{{ text_wishlist }}"/>
							<h4>{{ text_wishlist }}</h4>
						</div>
						</div>
						{% endif %}
						{% if link_order %}

						<div class="col-md-3 col-sm-6 col-xs-6">
							<div class="white-box">
							<a href="{{ order }}"><img class="img-responsive" src="catalog/view/theme/default/image/icon5.png" alt="{{ text_order }}" title="{{ text_order }}"/>
							<h4>{{ text_order }}</h4></a>
						</div>
						</div>
						{% endif %}
						{% if link_downloads %}
						<div class="col-md-3 col-sm-6 col-xs-6">
							<div class="white-box">
							<a href="{{ downloads }}"><img class="img-responsive" src="catalog/view/theme/default/image/icon6.png" alt="{{ text_download }}" title="{{ text_download }}"/>
							<h4>{{ text_download }}</h4></a>
						</div>
						</div>
						{% endif %}
						{% if link_reward %}
						<div class="col-md-3 col-sm-6 col-xs-6">
							<div class="white-box">
							<a href="{{ reward }}"><img class="img-responsive" src="catalog/view/theme/default/image/icon8.png" alt="{{ text_reward_point }}" title="{{ text_reward_point }}"/>
							<h4>{{ text_reward_point }}</h4></a>
						</div>
						</div>
						{% endif %}
						{% if link_returns %}
						<div class="col-md-3 col-sm-6 col-xs-6">
							<div class="white-box">
							<a href="{{ return }}"><img class="img-responsive" src="catalog/view/theme/default/image/icon9.png" alt="{{ text_returnrequest }}" title="{{ text_returnrequest }}"/>
							<h4>{{ text_returnrequest }}</h4></a>
						</div>
						</div>
						{% endif %}
						{% if link_transaction %}
						<div class="col-md-3 col-sm-6 col-xs-6">
							<div class="white-box">
							<a href="{{ transactions }}"><img class="img-responsive" src="catalog/view/theme/default/image/icon10.png" alt="{{ text_transation }}" title="{{ text_transation }}"/>
							<h4>{{ text_transation }}</h4></a>
						</div>
						</div>
						{% endif %}
						{% if link_payments %}
						<div class="col-md-3 col-sm-6 col-xs-6">
							<div class="white-box">
							<a href="{{ recurring }}"><img class="img-responsive" src="catalog/view/theme/default/image/icon7.png" alt="{{ text_recurringpayments }}" title="{{ text_recurringpayments }}"/>
							<h4>{{ text_recurringpayments }}</h4></a>
						</div>
						</div>
						{% endif %}
						{% if link_newsletter %}
						<div class="col-md-3 col-sm-6 col-xs-6">
							<div class="white-box">
							<a href="{{ newsletter }}"><img class="img-responsive" src="catalog/view/theme/default/image/icon11.png" alt="{{ text_newsletter }}" title="{{ text_newsletter }}"/>
							<h4>{{ text_newsletter }}</h4></a>
							</div>
						</div>
						{% endif %}


						{% if link_affilate %}
						<div class="col-md-3 col-sm-6 col-xs-6">
							<div class="white-box">
							<a href="{{ affilate }}"><img class="img-responsive" src="catalog/view/theme/default/image/icon13.png" alt="{{ text_affilate }}" title="{{ text_affilate }}"/>
							<h4>{{ text_affilate }}</h4></a>
							</div>
						</div>
						{% endif %}
					</div>
		
					{% if latest_order %}
					<div class="table1">
						<h3>{{ text_latest }}
						<span class="viewall"><a href="{{ viewalorders }}"><i class="fa fa-eye" aria-hidden="true"></i> {{ text_viewall }}</a></span>
						</h3>
						<div class="table-responsive">
							<table class="table table-bordered table-hover">
								<thead>
									<tr>
									  <td class="text-center">{{ column_order_id }}</td>
									  <td class="text-center">{{ column_product }}</td>
									  <td class="text-center">{{ column_status }}</td>
									  <td class="text-center">{{ column_total }}</td>
									  <td class="text-center">{{ column_date_added }}</td>
									  <td class="text-center">{{ column_action }}</td>
									</tr>
								</thead>
								<tbody>
									{% if orders %}
									{% for order in orders %}
									<tr>
										<td class="text-center">{{ order.order_id }}</td>
										<td class="text-center">{{ order.noof_product }}</td>
										<td class="text-center">{{ order.status }}</td>
										<td class="text-center">{{ order.total }}</td>
										<td class="text-center">{{ order.date_added }}</td>
										<td class="text-center"><span class="viewtext"><a href="{{ order.href }}" data-toggle="tooltip" title="{{ button_view }}" ><i class="fa fa-eye" style="color:#303942; font-size:18px;"></i></a></span></td>
									</tr>
									{% endfor %}
									{% else %}
									<tr>
										<td class="text-center" colspan="6">{{ text_no_results }}</td>
									</tr>
									{% endif %}
								</tbody>
							</table>
						</div>
					</div>
					{% endif %}
				
					{% if tmdaccount_latestorder == 1%}
					<div class="row">
						<div class="col-sm-6 text-left">{{ pagination }}</div>
						<div class="col-sm-6 text-right">{{ results }}</div>
					</div>
					{% endif %}
				</div>
			</div>
		</div>
		{{ content_bottom }}</div>
    {{ column_right }}</div>
</div>

<style type="text/css">
{{ tmdaccount_customcss }}
</style>

{{ footer }}