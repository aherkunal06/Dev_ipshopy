
<link rel="stylesheet" href="catalog/view/theme/so-mobile/css/todays_deals.css" />


<!-- catalog/view/theme/your-theme/template/common/mobile_deals.twig -->
<div class="mobile-deals-container">
  <h2 class="deals-title">Today's Best Deals</h2>
  <div class="deals-wrapper">
    {% for product in products %}
      <div class="deal-card">
        <img src="{{ product.thumb }}" alt="{{ product.name }}">
        <a href='{{product.product_link}}'>
            
        <h3 class="product-name">{{ product.name }}</h3>

        <p class="product-price">
          {% if product.special %}
            <span class="special-price">{{ product.special }}</span>
            <span class="old-price">{{ product.price }}</span>
          {% else %}
            <span class="normal-price">{{ product.price }}</span>
          {% endif %}
        </p>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

