<script type="text/javascript">
  $('#button-filter').on('click', function () {
      // Get current URL and params
      const currentUrl = new URL(window.location.href);
      const params = new URLSearchParams(currentUrl.search);
      const user_token = params.get('user_token');

      // Remove old route/user_token
      params.delete('route');
      params.delete('user_token');

      // Collect filters
      const filters = {
          filter_name: $('input[name="filter_name"]').val(),
          filter_model: $('input[name="filter_model"]').val(),
          filter_price: $('input[name="filter_price"]').val(),
          filter_quantity: $('input[name="filter_quantity"]').val(),
          filter_status: $('select[name="filter_status"]').val(),
          filter_added_by: $('#input-added-by').val(),
          filter_edited_by: $('#input-edited-by').val()
      };

      // Set/remove filters
      for (const key in filters) {
          if (filters[key]) {
              params.set(key, filters[key]);
          } else {
              params.delete(key);
          }
      }

      // âœ… CORRECTED: wrap the URL in backticks
      const finalUrl = `index.php?route=tracking/product_approval_list/filter&user_token=${encodeURIComponent(user_token)}&${params.toString()}`;

      // Redirect to filtered results
      location.href = finalUrl;
  });
</script>

