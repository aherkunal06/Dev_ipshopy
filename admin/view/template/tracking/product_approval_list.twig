<script>
  function combinedAutocomplete(selector, hiddenIdSelector) {
  $(selector).autocomplete({
    minLength: 0,
    source: function (request, response) {
      $.when(
        // User autocomplete
        $.ajax({
          url: 'index.php?route=catalog/product/autocompleteUsername&user_token={{ user_token }}&filter_username=' 
               + encodeURIComponent(request.term),
          dataType: 'json'
        }),
        // Vendor autocomplete
        $.ajax({
          url: 'index.php?route=vendor/vendor/autocomplete&user_token={{ user_token }}&filter_name=' 
               + encodeURIComponent(request.term),
          dataType: 'json'
        })
      ).done(function (userData, vendorData) {
        let combined = [];

        // Merge user results
        if (Array.isArray(userData[0])) {
          userData[0].forEach(item => {
            if (item.username) {
              combined.push({
                label: item.username,
                value: item.username,
                user_id: item.user_id
              });
            }
          });
        }

        // Merge vendor results
        if (Array.isArray(vendorData[0])) {
          vendorData[0].forEach(item => {
            if (item.vendorname) {
              combined.push({
                label: item.vendorname,
                value: item.vendorname,
                user_id: item.vendor_id
              });
            }
          });
        }

        // Filter combined array by the term:
        const filtered = $.ui.autocomplete.filter(combined, request.term);

        response(filtered);
      });
    },
    select: function (event, ui) {
      $(selector).val(ui.item.label);
      $(hiddenIdSelector).val(ui.item.user_id);
      return false;
    },
    focus: function (event, ui) {
      $(selector).val(ui.item.label);
      return false;
    }
  })
  .focus(function () {
    // Show all matches on focus
    $(this).autocomplete('search', this.value);
  });
}

