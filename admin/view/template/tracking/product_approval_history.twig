{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
        <div class="pull-right">
            <a href="javascript:history.back()" data-toggle="tooltip">
    			<button class="btn btn-info" ><i class="fa fa-reply"></i> </button>
    		</a>
        </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-filter"></i> Filter</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-sm-4">
            <div class="form-group">
              <label for="filter_date_approved">Date Approved</label>
              <input type="date" id="filter_date_approved" class="form-control" value="{{ filter_date_approved }}">
            </div>
          </div>
          <!-- Hidden input for approved_by -->
          <input type="hidden" id="filter_approved_by" value="{{ approved_by_name }}">
          <div class="col-sm-4">
            <label>&nbsp;</label>
            <div>
              <button id="button-filter" class="btn btn-primary"><i class="fa fa-filter"></i> Filter</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table id="tracking-table" class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>User Name</th>
                <th>Date Approved</th>
                <th>Total Approved</th>
                <th>Total Disapproved</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody id="tracking-body">
              {% for user in products %}
              <tr>
                <td>{{ user.approved_by }}</td>
                <td>{{ user.approved_date }}</td>
                <td>{{ user.approved_count}}</td>
                <td>{{ user.disapproved_count }}</td>
                <td><a href="{{ user.view }}" class="btn btn-info btn-sm" >View</a></td>
              </tr>
              {% else %}
              <tr>
                <td colspan="5" class="text-center">No data found</td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }}

<script type="text/javascript">
  $('#button-filter').on('click', function () {
    let dateApproved = $('#filter_date_approved').val();
    let approvedBy = $('#filter_approved_by').val(); // get approved_by from hidden input
    let url = 'index.php?route=tracking/product_approval_history&user_token={{ user_token }}';

    if (approvedBy) {
      url += '&approved_by=' + encodeURIComponent(approvedBy);
    }

    if (dateApproved) {
      url += '&filter_date_approved=' + encodeURIComponent(dateApproved);
    }

    location = url;
  });
</script>
