{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right"><a href="{{ insert }}" data-toggle="tooltip" title="{{ text_add }}" class="btn btn-primary"><i class="fa fa-plus"></i></a>
        <button type="button" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger" onclick="confirm('{{ text_confirm }}') ? $('#form-createtemplate').submit() : false;"><i class="fa fa-trash-o"></i></button>
		
		<button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg">Shortcut</button>
		
		
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-list"></i> {{ heading_title }}</h3>
      </div>

      <!-- Popup -->
		<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
		
		  <div class="modal-dialog modal-lg">
			<div class="modal-content">
			  <div id="inline1">
		<ul>
		<h1>Account Register</h1>
		<li>{store}     = Your Store Name<li/>
		<li>{firstname} = Customer First Name<li/>
		<li>{lastname}  = Customer Last Name<li/>
		<li>{link}      = Login Page Link<li/>
		
		
		<li>{store} = Your Store Name<li/>
		<li>{logo}  = Logo Image<li/>
		<li>{link}  = Your Last Name<li/>
				
		<h1>Affiliate Program</h1>
		<li>{store}	    = Your Store Name<li/>
		<li>{link}      = This Link Login to Affilate Login Page<li/>
		<li>{firstname} = Customer First Name<li/>
		<li>{lastname}  = Customer Last Name<li/>
		<li>{email}     = Customer Email<li/>
		
		<h1>Forgotten Password</h1>
		<li>{store}	    = Your Store Name<li/>
		<li>{password}  = Provied New Password<li/>
		
		<h1>Order Status</h1>
		<li>{logo}	        = Logo Image<li/>
		<li>{order_id}      = Your Order Id<li/>
		<li>{order_date}    = Your Order Date<li/>
		<li>{order_status}  = Your Order Status<li/>
		<li>{order_comment} = Order Comment<li/>
		<li>{link}        	= This Link Login to Affilate Login Page<li/>
		<li>{store}        	= Your Store Name<li/>
	
		<h1>Product Order</h1>
		<li>{logo}	                = Logo Image<li/>
		<li>{product_info}          = Product Related Information<br>
		    {sku}                   = Product sku<br>
		    {ip}                   = IP<br>
				{upc}			        = Product upc<br>
				{ean}                   = Product EAN<br>
		    {jan}                   = Product JAN<br>	
				{isbn}                  = Product ISBN<br>
				{mpn}                   = Product MPN<br>
				{location}              = Product Location<br>
				{manufacturer}          = Product Manufacturer<br>
				{categories}            = Product Categories<li/>
		<li>{store}                 = Your Store Name<br>
		    {customer_name}         = Your Customer Name<br>
				{customer_group}        = Your Customer Group<br>
		    {customer_email}        = Your Customer Email<br>
				{customer_telephone}    = Your Customer Telephone<br>
				{order_date}            = Your Order Date<br>
				{order_payment_method}  = Your Order Payment Method<br>
				{order_shipping_method} = Your Order Shipping Method<br>
				{order_invoice}         = Your Order Invoice<br>
				{order_payment_address} = Your Order Payment Address<br>
				{order_shipping_address}= Your Order Shipping Address<br>
				{order_status}          = Your Order Status<li/>
		
		</ul>
		</div>
			<div class="tmd">TMD</div>
			</div>
		  </div>
		 
		</div>
		<!-- popup -->

      <div class="panel-body">
         <form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form-createtemplate">
	  <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
               <td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" /></td>
			    
        <td class="text-left">{% if sort %}
                    <a href="{{ sort_name }}" class="{{ order|lower }}">{{ column_name }}</a>
                    {% else %}
                    <a href="{{ sort_name }}">{{ column_name }}</a>
                    {% endif %}
				</td>
			  <td class="text-left">{{ column_subject }}</td>
			  {# <td class="text-left">{{ column_status }}</td> #}
        <td class="text-left">{% if sort %}
                    <a href="{{ sort_status }}" class="{{ order|lower }}">{{ column_status }}</a>
                    {% else %}
                    <a href="{{ sort_status }}">{{ column_status }}</a>
                    {% endif %}</td>
			  
			  <td class="right">{{ column_action }}</td>
            </tr>
          </thead>
          <tbody>
            {% if createtemplates %}
            {% for createtemplate in createtemplates %}
            
			  <tr>
                 <td class="text-center">{% if createtemplate.createtemplate_id in selected %}
                    <input type="checkbox" name="selected[]" value="{{ createtemplate.createtemplate_id }}" checked="checked" />
                    {% else %}
                    <input type="checkbox" name="selected[]" value="{{ createtemplate.createtemplate_id }}" />
                    {% endif %}</td>
                
              <td class="left">{{ createtemplate.name }}</td>
              <td class="left">{{ createtemplate.subject }}</td>
			  <td class="left">{{ createtemplate.status }}</td>
			  
              <td class="right"><a href="{{ createtemplate.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a></td>
            </tr>
            {% endfor %}
            {% else %}
            <tr>
              <td class="center" colspan="5">{{ text_no_results }}</td>
            </tr>
            {% endif %}
          </tbody>
        </table>
      </form>
        <div class="">
          <div class="col-sm-6 text-left">{{ pagination }}</div>
          <div class="col-sm-6 text-right">{{ results }}</div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
#inline1{margin:0px;}
#inline1 ul{margin:0px;}
#inline1 ul li{ line-height: 25px;
    list-style: outside none none;
}
.modal.in .modal-dialog{width: 500px}
.modal-content{height: 378px;padding-top:18px;
    overflow: auto;
    width: 500px}
.tmd{font-size: 15px;
    left: 430px;
    margin-bottom: 21px;
    position: fixed;    
    top: 5px;}	
</style>
{{ footer }}