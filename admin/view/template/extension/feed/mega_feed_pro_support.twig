<div class="tab-pane" id="support">
  <div class="row">
    <div class="col-sm-12 col-md-12">

      <div class="panel panel-default">
        <div class="panel-heading"><strong>{{ support_heading }}</strong></div>
        <div class="panel-body">
          {{ support_text }}
        </div>
      </div>

      <div class="panel panel-default">
        <div class="panel-heading"><strong>{{ logs_heading }}</strong></div>
        <div class="panel-body">
          {{ logs_text }}
          <br/><br/>
          <a href="{{ stores[0].url }}index.php?route={{ route }}&a=log&h={{ mega_token }}" target="_blank" class="btn btn-default mg-btn mg-light-green" data-toggle="tooltip" title="{{ show_logs_btn }}" data-original-title="{{ show_logs_btn }}"><i class="icon fa fa-print"></i>&nbsp;{{ show_logs_btn }}</a>
          <a href="?route={{ route }}/export-csv-logs&user_token={{ user_token }}" target="_blank" class="btn btn-default mg-btn mg-light-green" data-toggle="tooltip" title="{{ download_logs_btn }}" data-original-title="{{ download_logs_btn }}"><i class="icon fa fa-download"></i>&nbsp;{{ download_logs_btn }}</a>
          <a href="javascript:void(0);" class="btn btn-danger mg-btn" id="clear-logs-btn" data-toggle="tooltip" title="{{ clear_logs_btn }}" data-original-title="{{ clear_logs_btn }}"><i class="icon fa fa-eraser"></i>&nbsp;{{ clear_logs_btn }}</a>
          <br/>
        </div>
      </div>

      <!-- stores -->
      <div>
        <ul class="nav nav-tabs" id="support-store-tabs">
        {% for store in stores %}
          <li><a href="#support-store-{{ store.store_id }}" data-toggle="tab"><i class="fa fa-shopping-cart"></i>&nbsp;{{ store.name }}</a></li>
        {% endfor %}
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
        {% for store in stores %}
          <div class="tab-pane" id="support-store-{{ store.store_id }}">

            <table class="table table-striped table-bordered">
            <tr>
              <th>{{ logs_table_item }}</th>
              <th align="left">{{ logs_table_value }}</th>
            </tr>
            <tr>
              <td>{{ website_url }}</td>
              <td align="left"><a href="{{ store.url }}" target="_blank">{{ store.url }}</a></td>
            </tr>
            <tr>
              <td>{{ log_url }}</td>
              <td align="left"><a href="{{ stores[0].url }}index.php?route={{ route }}&a=log&s={{ store.store_id }}&h={{ store_logs[store.store_id].hash }}" target="_blank">{{ stores[0].url }}index.php?route={{ route }}&a=log&s={{ store.store_id }}&h={{ store_logs[store.store_id].hash }}</a></td>
            </tr>
            {% for lang in languages %}
              {% for currency in currencies %}
              <tr>
                <td>{{ product_cron_url }} ({{ lang.name }} - {{ currency.code }})</td>
                <td align="left"><a href="javascript:void(0);" onclick="exportFeed(this)" data-url="{{ stores[0].url }}index.php?route={{ route }}&a=pf&s={{ store.store_id }}&l={{ lang.code }}&c={{ currency.code|lower }}&h={{ product_feeds[store.store_id][lang.code][currency.code|lower].cron_hash }}">{{ stores[0].url }}index.php?route={{ route }}&a=pf&s={{ store.store_id }}&l={{ lang.code }}&c={{ currency.code|lower }}&h={{ product_feeds[store.store_id][lang.code][currency.code|lower].cron_hash }}</a></td>
              </tr>
              <tr>
                <td>{{ product_feed_url }} ({{ lang.name }} - {{ currency.code }})</td>
                {% if product_feeds[store.store_id][lang.code][currency.code|lower].exists == "1" %}
                  <td align="left"><a href="{{ product_feeds[store.store_id][lang.code][currency.code|lower].path }}">{{ product_feeds[store.store_id][lang.code][currency.code|lower].path }}</a></td>
                {% else %}
                  <td align="left">{{ product_feeds[store.store_id][lang.code][currency.code|lower].path }}</td>
                {% endif %}
              </tr>
              <tr>
                <td>{{ category_cron_url }} ({{ lang.name }} - {{ currency.code }})</td>
                <td align="left"><a href="javascript:void(0);" onclick="exportFeed(this)" data-url="{{ stores[0].url }}index.php?route={{ route }}&a=cf&s={{ store.store_id }}&l={{ lang.code }}&c={{ currency.code|lower }}&h={{ category_feeds[store.store_id][lang.code][currency.code|lower].cron_hash }}">{{ stores[0].url }}index.php?route={{ route }}&a=cf&s={{ store.store_id }}&l={{ lang.code }}&c={{ currency.code|lower }}&h={{ category_feeds[store.store_id][lang.code][currency.code|lower].cron_hash }}</a></td>
              </tr>
              <tr>
                <td>{{ category_feed_url }} ({{ lang.name }} - {{ currency.code }})</td>
                {% if category_feeds[store.store_id][lang.code][currency.code|lower].exists == "1" %}
                  <td align="left"><a href="{{ category_feeds[store.store_id][lang.code][currency.code|lower].path }}">{{ category_feeds[store.store_id][lang.code][currency.code|lower].path }}</a></td>
                {% else %}
                  <td align="left">{{ category_feeds[store.store_id][lang.code][currency.code|lower].path }}</td>
                {% endif %}
              </tr>
              {% endfor %}
            {% endfor %}
            <tr>
              <td>{{ heureka_availability_cron_url }}</td>
              <td align="left"><a href="javascript:void(0);" onclick="exportFeed(this)" data-url="{{ stores[0].url }}index.php?route={{ route }}&a=haf&s={{ store.store_id }}&h={{ heureka_availability_feeds[store.store_id].cron_hash }}">{{ stores[0].url }}index.php?route={{ route }}&a=haf&s={{ store.store_id }}&h={{ heureka_availability_feeds[store.store_id].cron_hash }}</a></td>
            </tr>
            <tr>
                <td>{{ heureka_availability_feed_url }}</td>
                {% if heureka_availability_feeds[store.store_id].exists == "1" %}
                  <td align="left"><a href="{{ heureka_availability_feeds[store.store_id].path }}">{{ heureka_availability_feeds[store.store_id].path }}</a></td>
                {% else %}
                  <td align="left">{{ heureka_availability_feeds[store.store_id].path }}</td>
                {% endif %}
              </tr>
            </table>

          </div>
        {% endfor %}
        </div>
      </div>
      <!-- ./stores -->

      <!-- Common parameters -->
      <table class="table table-striped table-bordered">
      <tr>
        <th>{{ logs_table_item }}</th>
        <th align="left">{{ logs_table_value }}</th>
      </tr>
      <tr>
        <td>{{ mg_token }}</td>
        <td align="left">{{ mega_token }}</td>
      </tr>
      <tr>
        <td>{{ php_ver_label }}</td>
        <td align="left">{{ php_version }}</td>
      </tr>
      <tr>
        <td>{{ oc_ver_label }}</td>
        <td align="left">{{ opencart_version }}</td>
      </tr>
      <tr>
        <td>{{ ext_ver_label }}</td>
        <td align="left">{{ version }}</td>
      </tr>
      </table>
      <!-- ./Common parameters -->

      <!-- Enable/Disable logs -->
      <div class="panel panel-default">
        <div class="panel-heading"><strong>{{ logs_settings_heading }}</strong></div>
        <div class="panel-body">

          <div class="form-group">
            <label class="col-sm-2 control-label" for="{{ extension_fullname }}_logs">{{ logs_status }}</label>
            <div class="col-sm-3">
              <input type="hidden" name="{{ extension_fullname }}_logs" value="off">
              <input type="checkbox" name="{{ extension_fullname }}_logs" id="{{ extension_fullname }}_logs" class="toggle-btn" data-on="{{ btn_on }}" data-off="{{ btn_off }}" data-width="100" {{ _context[extension_fullname ~ "_logs"] == "on" or _context[extension_fullname ~ "_logs"] == "1" ? 'checked' : '' }}>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="{{ extension_fullname }}_debug_mode">{{ debug_mode }}</label>
            <div class="col-sm-3">
              <input type="hidden" name="{{ extension_fullname }}_debug_mode" value="off">
              <input type="checkbox" name="{{ extension_fullname }}_debug_mode" id="{{ extension_fullname }}_debug_mode" class="toggle-btn" data-on="{{ btn_on }}" data-off="{{ btn_off }}" data-width="100" {{ _context[extension_fullname ~ "_debug_mode"] == "on" or _context[extension_fullname ~ "_debug_mode"] == "1" ? 'checked' : '' }}>
            </div>
          </div>

        </div>
      </div>
      <!-- ./ Enable/Disable logs -->

    </div>

  </div>
</div> 