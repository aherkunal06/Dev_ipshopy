{% if mergadoNewsWidget is null and ( mergado_news.data.news is not empty or mergado_news.data.update is not empty ) %}
  <div id="mergado-news-widget" class="container-fluid">
    <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><span class="icon fa fa-newspaper-o"></span>&nbsp;{{ mergado }}</h3>
          <div class="pull-right">
            <button type="button" id="mergado-news-close" class="btn btn-danger"><i class="fa fa-times-circle"></i></button>
          </div>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-6 col-md-6">

              {% if mergado_news.data.news is not empty %}

                {% for item in mergado_news.data.news %}
                  <div class="media">
                    <div class="media-body">
                      <h4 class="media-heading"><a href="{{ item.url }}" target="_blank"><strong>{{ item.title }}</strong></a></h4>
                      <div>
                        <span class="label label-success">{{ mergado_category_news }}</span>
                        <span><i>{{ item.pubdate }}</i></span>
                      </div>
                    </div>
                  </div>
                {% endfor %}

              {% else %}
                {{ mergado_news_empty_text }}
              {% endif %}

            </div>
            <div class="col-lg-6 col-md-6">
              {% if mergado_news.data.update is not empty %}

                {% for item in mergado_news.data.update %}
                  <div class="media">
                    <div class="media-body">
                      <h4 class="media-heading"><a href="{{ item.url }}" target="_blank"><strong>{{ item.title }}</strong></a></h4>
                      <div>
                        <span class="label label-info">{{ mergado_category_update }}</span>
                        <span><i>{{ item.pubdate }}</i></span>
                      </div>
                    </div>
                  </div>
                {% endfor %}

              {% else %}
                {{ mergado_update_empty_text }}
              {% endif %}
            </div>
          </div>
        </div>
    </div>
  </div>
  <script type="text/javascript"><!--
  $(document).ready(function(){
    $('#mergado-news-close').on('click', function() {
      hideMergadoNews();
    });
  });

  function hideMergadoNews(){
    $.ajax({
    url: 'index.php?route={{ route }}/hide-mergado-news&user_token={{ user_token }}',
    data: { },
    method: 'POST',
    success : function(response){
      $('#mergado-news-widget').slideUp();
    },
    error : function(){
      $('#mergado-news-widget').slideUp();
    }
    });
  }
  //--></script>
{% endif %}
