{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
	{{ getkeyform }}
  <div class="container-fluid">
	{% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
	<div class="panel panel-default">
    <div class="panel-heading">
			<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ heading_title }}</h3>
      </div>
    <div class="panel-body">
	<ul class="nav nav-tabs">
				<li class="active"><a href="#tab-export" data-toggle="tab">{{ tab_export }}</a></li>
				<li><a href="#tab-import" data-toggle="tab">{{ tab_import }}</a></li>
			</ul>
			<div class="tab-content">
			<div class="tab-pane active" id="tab-export">
      <form class="form-horizontal" action="{{ exportlink }}" method="post" enctype="multipart/form-data" id="exportlink">
		  <div class="row">
            <div class="col-sm-6">
				<div class="form-group">
					<label  class="col-sm-4 control-label" for="input-name">{{ entry_name }}</label>
					<div class="col-sm-8">
					<input type="text" name="filter_name" value="" placeholder="{{ entry_name }}" id="input-name" class="form-control input-sm" />
					<input type="hidden" name="product_id" value=""  id="product_id" class="form-control input-sm" />
					</div>
				</div>
				<div class="form-group">
			<label class="col-sm-4 control-label">{{ entry_rating }}</label>
			<div class="col-sm-8">
				<div class="col-xs-6 ratingto">
				<input name="ratingto" value="1" class="form-control input-sm">   
				</div>
				<div class="col-xs-6 ratingfrom">
				<input name="ratingfrom" value="5" class="form-control input-sm " >
				</div>
				</div>
			</div>
			</div>
		 <div class="col-sm-6">
			<div class="form-group">
			<label class="col-sm-4 control-label">{{ entry_limit }}</label>
			<div class="col-sm-8">
				<div class="col-xs-6">
				<input name="number" value="{{ number }}" class="form-control input-sm">    
				</div>
				<div class="col-xs-6">
				<input name="end" value="{{ end }}" class="form-control input-sm " >
				</div>
				</div>
			</div>
			<div class="form-group ">
			<label class="col-sm-4 control-label">{{ entry_daterange }}</label>
			<div class="col-sm-8">
				<div class="col-xs-6 date">
				   <input type="text" name="dateto" value="" placeholder="" data-date-format="YYYY-MM-DD" id="input-date-start" class="form-control input-sm ratingto" /> 
				</div>
				<div class="col-xs-6 date">
				  <input type="text" name="datefrom" value="" placeholder="" data-date-format="YYYY-MM-DD" id="input-date-end" class="form-control input-sm ratingfrom" /> 
				</div>
				</div>
			</div>
		 </div>
		 </div>
		<div class="form-group col-sm-4 pull-right">
				<input type="submit" class="btn btn-primary col-sm-12" value="{{ button_export }}">
		 </div>
      </form>
	  </div>
	  <div class="tab-pane" id="tab-import">
	   <form class="form-horizontal" action="{{ importlink }}" method="post" enctype="multipart/form-data" id="importlink">
			<div class="row">
				<div class="col-sm-12">
					<div class="form-group">
						<label class="col-sm-4 control-label">{{ entry_import }}</label>
						<div class="col-sm-8"><input type="file" name="import" /></div>
					</div>
					<div class="pull-right col-sm-5">
					<input type="submit" class="btn btn-primary col-sm-12" value="{{ button_import }}">
				</div>
				</div>
				<div class="form-group col-sm-12">
				<label class="col-sm-2 ">{{ entry_importby }}</label>
				<div class="col-sm-8">
				<select name="importby" class="form-control">
				 <option value="2">{{ entry_updatereview }}</option>
				<option value="1">{{ entry_newreview }}</option>
				</select>
				</div>
				</div>
				
				
			</div>
	     </form>
  
  </div>
</div>
</div>
</div>
</div>
</div>
<script type="text/javascript"><!--
$('input[name=\'filter_name\']').autocomplete({
	'source': function(request, response) {
		$.ajax({
			url: 'index.php?route=catalog/product/autocomplete&user_token={{ user_token }}&filter_name=' +  encodeURIComponent(request),
			dataType: 'json',
			success: function(json) {
				response($.map(json, function(item) {
					return {
						label: item['name'],
						value: item['product_id']
					}
				}));
			}
		});
	},
	'select': function(item) {
		$('input[name=\'filter_name\']').val(item['label']);
		$('input[name=\'product_id\']').val(item['value']);
	}
});


$('.date').datetimepicker({
	pickTime: false
});
//--></script>
<style>
.ratingto{padding-left:0px}
.ratingfrom{padding-right:0px}
.pull-right.col-sm-5 {
    margin-top: -71px;
}
label.col-sm-4.control-label {
    text-align: start;
}
input[type="file"] {
    margin-left: -83px;
}
</style>
{{ footer }}
