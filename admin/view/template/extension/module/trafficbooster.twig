{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-hubtalk" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i>{{ text_edit }}</h3>
      </div>
      <div class="panel-body">
	  
	  <div><p>You'll receive the Google conversion pixel upon 24 hours from signing up for the <a href="http://www.storeya.com/public/trafficbooster" target="_blank">Traffic Booster</a>.<br/>
If you don't have an account with StoreYa yet, please <a href="http://www.storeya.com/public/trafficbooster" target="_blank">create one here</a>.</div>
	  
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-account" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">Status</label>
            <div class="col-sm-10">
              <select name="module_trafficbooster_status" id="input-status" class="form-control">
                {% if module_trafficbooster_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          
          <div class="form-group">	  
            <label class="col-sm-2 control-label" for="input-pop"><span class="required">*</span> Google AdWords conversion pixel code: </label>
            <div class="col-sm-10">             
			  <textarea name="trafficbooster_code" cols="100" rows="10" >{{ tb_code }}</textarea>
            </div>
          </div>
        </form>
        <img src="http://www.storeya.com/widgets/admin?p=TB_OpenCart"/>
      </div>
    </div>
  </div>
</div>
{{ footer }} 