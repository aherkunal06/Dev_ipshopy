{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  {{ getkeyform }}
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="module_createtemplate_status" id="input-status" class="form-control">
                {% if module_createtemplate_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_height_width }}</label>
            <div class="col-sm-5">
             <input type="number" name="module_createtemplate_logo_height" value="{{ module_createtemplate_logo_height }}" placeholder="{{ entry_height }}" class="form-control">
            </div>
            <div class="col-sm-5">
             <input type="number" name="module_createtemplate_logo_width" value="{{ module_createtemplate_logo_width }}" placeholder="{{ entry_width }}" class="form-control">
            </div>
          </div>
          
          <div class="form-group">
					 <label class="col-sm-2 control-label" for="input-account_register">{{ entry_account_register }}</label>
						<div class="col-sm-10">
						<td>
						<select name="module_createtemplate_accountregister_template_id" id="input-account-register" class="form-control">
						  <option value="">{{ text_none }}</option>
								   {% for createtemplate in createtemplates %}
									{% if createtemplate.createtemplate_id == module_createtemplate_accountregister_template_id %}
									
									<option selected="selected" value="{{ createtemplate.createtemplate_id }}">{{ createtemplate.name }}</option>
									
									{% else %}
									
									<option value="{{ createtemplate.createtemplate_id }}">{{ createtemplate.name }}</option>
									
									{% endif %}
                                    {% endfor %}
								   </select>
						   </div>
				   </div> 
					<div class="form-group">
						<label class="col-sm-2 control-label">{{ entry_affiliates }}</label>
						<div class="col-sm-10">							   
						   <select name="module_createtemplate_affiliate_template_id" class="form-control">
						  <option value="">{{ text_none }}</option>
						  {% for createtemplate in createtemplates %}
						  {% if createtemplate.createtemplate_id == module_createtemplate_affiliate_template_id %}
						  <option selected="selected" value="{{ createtemplate.createtemplate_id }}">{{ createtemplate.name }}</option>
						  {% else %}
						  <option value="{{ createtemplate.createtemplate_id }}">{{ createtemplate.name }}</option>
						  {% endif %}
                          {% endfor %}
							</select>
						   </div>
				   </div>

				   
				  <div class="form-group">
					<label class="col-sm-2 control-label">{{ entry_forgot_password }}</label>
				    <div class="col-sm-10">	
					<select name="module_createtemplate_forgotpassword_template_id" class="form-control">
					<option value="">{{ text_none }}</option>
						  {% for createtemplate in createtemplates %}
						  {% if createtemplate.createtemplate_id == module_createtemplate_forgotpassword_template_id %}
						  <option selected="selected" value="{{ createtemplate.createtemplate_id }}">{{ createtemplate.name }}</option>
						  {% else %}
						  <option value="{{ createtemplate.createtemplate_id }}">{{ createtemplate.name }}</option>
						  {% endif %}
                          {% endfor %}
								   </select>
						   </div>
						</div>
            

			

				  {% for order_status in order_statuses %}
            <div class="form-group">
              <label class="col-sm-2 control-label">{{ order_status.name }}</label>
						   <div class="col-sm-10">	
                <select name="module_createtemplate_orderstatus[{{ order_status.order_status_id }}]" class="form-control">
                  <option value="">{{ text_none }}</option>
                  {% for createtemplate in createtemplates %}
                  {% if createtemplate.createtemplate_id == module_createtemplate_orderstatus[ order_status.order_status_id ] %}
                  <option selected="selected" value="{{ createtemplate.createtemplate_id }}">{{ createtemplate.name }}</option>
                  {% else %}
                  <option value="{{ createtemplate.createtemplate_id }}">{{ createtemplate.name }}</option>
                  {% endif %}
                  {% endfor %}
                </select>
						  </div>
            </div> 
          {% endfor %}

          
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
