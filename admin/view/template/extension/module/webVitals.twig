{% if fatal %}
<div class="ui icon error message">
  <i class="info circle icon"></i>
  <div class="content">
    <div class="header">
      Error
    </div>
    <p>{{ fatal }}</p>
  </div>
</div>
{% else %}

{% if warn %}
<div class="ui icon warning message">
  <i class="info circle icon"></i>
  <div class="content">
    <div class="header">
      Warning
    </div>
    <p>{{ warn }}</p>
  </div>
</div>
{% endif %}

		
