<script>

$('#bulk-resend-btn').on('click', function () {
    var selected = [];
    $('input[name="selected[]"]:checked').each(function () {
        selected.push($(this).val());
    });

    if (selected.length === 0) {
        alert('Please select at least one record to resend!');
        return;
    }

    if (confirm('Are you sure you want to resend the selected messages?')) {
        var $btn = $(this);
        var $icon = $('#resend-icon');

        // تغيير الأيقونة وتعطيل الزر
        $icon.removeClass('fa-refresh').addClass('fa-spinner fa-spin');
        $btn.prop('disabled', true);

        $.ajax({
            url: 'index.php?route=extension/module/waclient/history/resend&user_token={{ user_token }}',
            type: 'post',
            data: { history_ids: selected },
            success: function (response) {
                location.reload();
            },
            error: function (xhr, status, error) {
                alert('An error occurred. Please try again!');
            },
            complete: function () {
                $icon.removeClass('fa-spinner fa-spin').addClass('fa-refresh');
                $btn.prop('disabled', false);
            }
        });
    }
});




$('#bulk-delete-btn').on('click', function () {
    var selected = [];
    $('input[name="selected[]"]:checked').each(function () {
        selected.push($(this).val());
    });

    if (selected.length === 0) {
        alert('Please select at least one record to delete!');
        return;
    }

    if (confirm('Are you sure you want to delete the selected records?')) {
        var $btn = $(this);
        var $icon = $('#delete-icon');

        // تغيير الأيقونة وتعطيل الزر
        $icon.removeClass('fa-trash').addClass('fa-spinner fa-spin');
        $btn.prop('disabled', true);

        $.ajax({
            url: 'index.php?route=extension/module/waclient/history/delete&user_token={{ user_token }}',
            type: 'post',
            data: { history_ids: selected },
            success: function (response) {
                // إعادة التوجيه بعد نجاح الحذف
                location.reload();
            },
            error: function (xhr, status, error) {
                alert('An error occurred. Please try again!');
            },
            complete: function () {
                // استعادة الحالة الأصلية للزر
                $icon.removeClass('fa-spinner fa-spin').addClass('fa-trash');
                $btn.prop('disabled', false);
            }
        });
    }
});
</script>
