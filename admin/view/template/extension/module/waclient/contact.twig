$('#input-product').parent().find('.well').delegate('.fa-minus-circle', 'click', function() {
	$(this).parent().remove();
});

function send(url) {
	$.ajax({
		url: url,
		type: 'post',
		timeout: 0,
		data: $('#content select, #content input, #content textarea'),
		dataType: 'json',
		beforeSend: function() {
			$('#button-send').button('loading');
		},
		success: function(json) {
			$('.alert-dismissible, .text-danger').remove();
			$('.alert').remove();

			if (json['error']) {
				if (json['error']['warning']) {
					$('#content > .container-fluid').prepend('<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> ' + json['error']['warning'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
				}

				if (json['error']['email']) {
					$('#content > .container-fluid').prepend('<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> ' + json['error']['email'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
				}

				if (json['error']['message']) {
					$('textarea[name=\'message\']').parent().append('<div class="text-danger">' + json['error']['message'] + '</div>');
				}

				if (json['error']['delay']) {
					$('input[name=\'delay\']').parent().append('<div class="text-danger">' + json['error']['delay'] + '</div>');
				}
			}

			if (json['success']) {
				$('#content > .container-fluid').prepend('<div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i>  ' + json['success'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
			}
				
			if (json['next']) {
				send(json['next']);
			} else {
				$('#button-send').button('reset');
			}
			
		},
		error: function(xhr, ajaxOptions, thrownError) {
			alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
		}
	});
}

//--></script>
{% if wa_page %}
<script>
$( document ).ready(function() {
	alert('{{ text_process_pending }}');
    $("#input-to").val("{{ to }}");
	$("#input-customer-group").val("{{ customer_group_id }}");
	$('#content select, #content input, #content textarea').attr("disabled", "disabled");
	$('#button-clear').show();
	$('#button-clear').on('click', function() {
		$.ajax({
			url: 'index.php?route=extension/module/waclient/contact/clear&user_token={{ user_token }}',
			type: 'post',
			data: '',
			dataType: 'json',
			beforeSend: function() {
				$('#button-clear').button('loading');
			},
			success: function(json) {
				location.reload();
			},
			error: function(xhr, ajaxOptions, thrownError) {
				alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
			}
		});
	});
});
</script>
{% else %}
<script>
$( document ).ready(function() {
$('#button-clear').hide();
});
</script>
{% endif %}

