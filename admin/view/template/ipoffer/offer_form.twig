{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-offer" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-offer" class="form-horizontal">
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-offer-name">{{ entry_customer }}</label>
            <div class="col-sm-10">
              <input type="text" name="offer_name" value="{{ offer_name }}" placeholder="{{ entry_customer }}" id="input-offer-name" class="form-control" {% if ipoffer_id %}readonly{% endif %} />
              {% if error_offer_name %}
              <div class="text-danger">{{ error_offer_name }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-percentage">{{ entry_percentage }}</label>
            <div class="col-sm-10">
              <input type="number" name="percentage" value="{{ percentage }}" placeholder="{{ entry_percentage }}" id="input-percentage" class="form-control" min="1" max="9" step="1" pattern="[1-9]" oninput="this.value = this.value.replace(/[^1-9]/g, '').slice(0,1);" />
              {% if error_percentage %}
              <div class="text-danger">{{ error_percentage }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-offer-type">Offer Type</label>
            <div class="col-sm-10">
              <select name="offer_type" id="input-offer-type" class="form-control" {% if ipoffer_id %}disabled{% endif %}>
                <option value="first_time" {% if offer_type == 'first_time' %}selected="selected"{% endif %}>First Time Offer</option>
                <option value="referral" {% if offer_type == 'referral' %}selected="selected"{% endif %}>Referral Offer</option>
              </select>
              {% if ipoffer_id %}
                <input type="hidden" name="offer_type" value="{{ offer_type }}" />
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
                {% if status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}