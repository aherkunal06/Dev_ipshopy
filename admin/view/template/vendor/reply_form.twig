{{ header }}{{ column_left }}
<div id="content" class="container-fluid">
  <div class="page-header">
    <div class="container-fluid">
      <h1>Reply to Product Comment</h1>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading"><h3 class="panel-title">Comment Thread</h3></div>
    <div class="panel-body">
      {% if comments %}
        {% for c in comments %}
          <div class="comment-block">
            <strong>{{ c.comment_by|capitalize }}:</strong> {{ c.comment }} <br>
            <small class="text-muted">{{ c.date_added }}</small>
            {% if c.media %}
              <div class="mt-2">
                {% for file in c.media %}
                  {% if file ends with '.jpg' or file ends with '.jpeg' or file ends with '.png' %}
                    <img src="image/{{ file }}" width="60" class="img-thumbnail mr-1">
                  {% elseif file ends with '.mp4' %}
                    <video width="150" controls><source src="image/{{ file }}"></video>
                  {% else %}
                    <a href="image/{{ file }}" target="_blank">Download</a>
                  {% endif %}
                {% endfor %}
              </div>
            {% endif %}
          </div>
          <hr>
        {% endfor %}
      {% else %}
        <p class="text-muted">No comments available.</p>
      {% endif %}

      <form method="post" action="{{ action }}" enctype="multipart/form-data">
        <div class="form-group">
          <label for="reply">Your Reply:</label>
          <textarea name="reply" class="form-control" rows="3" required></textarea>
        </div>
        <div class="form-group">
          <label>Attach files (images, videos, zip, etc.):</label>
          <input type="file" name="media[]" multiple class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Submit Reply</button>
      </form>
    </div>
  </div>
</div>
{{ footer }}