    {{ header }}{{ column_left }}
    <div id="content">
        <div class="page-header">
            <div class="container-fluid">
                <div class="pull-right">
                    <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default">
                        <i class="fa fa-reply"></i>
                    </a>
                </div>
                <h1>{{ heading_title }}</h1>
                <ul class="breadcrumb">
                    {% for breadcrumb in breadcrumbs %}
                      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                    {% endfor %}
                  </ul>
                  
            </div>
        </div>
        <div class="container-fluid">
            {#<h3>{{Page_heading}}</h3>#}
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>{{column_order_id}}</th>
                        <th>{{column_product}}</th>
                        <th>{{column_qty}}</th>
                        <th>{{column_price}}</th>
                        <th>{{column_product_courier_charges}}</th>
                        <th>{{column_courier_rate}}</th>
                        <th>{{column_rto_charges}}</th>
                        <th>{{column_reverse_courier_charges}}</th>
                        <th>{{column_total_deduction}}</th>
                        <th>{{column_net_amount}}</th>
                        <th>{{column_payment_status}}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for product in vendor_products %}
                    <tr>
                        <td>{{ product.order_id }}</td>
                        <td>{{ product.product_name }}</td>
                        <td>{{ product.quantity }}</td>
                        <td>₹{{ product.price | round}}</td>
                        <td>₹{{product.product_courier_charges | round}}</td>
                        <td>₹{{ product.courier_rate | round }}</td>
                        <td>₹{{ product.rto_charges }}</td>
                        <td>₹{{ product.reverse_courier_charges }}</td>
                        <td>₹{{ product.total_deduction | round}}</td>
                        <td>₹{{ product.net_settlement_amount |round }}</td>
                        <td>{{ product.payment_status }}</td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="11" class="text-center">No paid products found for this vendor.</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>




            <!-- <div class="alert alert-info">No paid orders found for this Order ID.</div> -->

        </div>
    </div>

    {{ footer }}
</div>



