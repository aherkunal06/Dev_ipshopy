{{ header }}{{ column_left }}

<div id="content" class="vendor-list">
	<div class="page-header">
		<div class="container-fluid">
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li>
						<a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>

	<div class="container-fluid">
		{#{% if error_warning %}#}
		{#	<div class="alert alert-danger">#}
		{#		<i class="fa fa-exclamation-circle"></i>#}
		{#		{{ error_warning }}#}
		{#		<button type="button" class="close" data-dismiss="alert">&times;</button>#}
		{#	</div>#}
		{#{% endif %}#}
		{% if success %}
			<div class="alert alert-success">
				<i class="fa fa-check-circle"></i>
				{{ success }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">
					<i class="fa fa-list"></i>
					{{ text_list }}Ticket-list</h3>
			</div>
			<div class="panel-body">
				<div class="well">
					<div class="row">


						<form method="get" action={{filter_action}}>
							<input type="hidden" name="route" value="vendor/ticket_list"/>
							<input type="hidden" name="user_token" value="{{ user_token }}"/>
							<div class="form-group">
								<label class="control-label">Ticket ID</label>
								<input type="number" name="filter_ticket_id" value="" class="form-control" placeholder="Enter Ticket ID"/>
							</div>
							<button type="submit" class="btn btn-primary">Search</button>
							<a href="{{ filter_action }}&user_token={{ user_token }}" class="btn btn-default">Reset</a>
							{# <a href="{{ filter_action }}" class="btn btn-default">Reset</a> #}

						</form>


						<table class="table table-striped table-bordered table-hover">
							<thead class="thead-light">
								<tr>
									<th>Ticket ID</th>
									<th>Seller ID</th>
									<th>Seller Name</th>
									<th>Subject</th>
									<th>Ticket Category</th>
									<th>Message</th>
									{# <th>Image</th> #}
									<th>Status</th>
									<th>Date Added</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>
								{% if tickets %}
									{% for ticket in tickets %}
										<tr>
											<td>{{ ticket.ticket_id }}</td>
											<td>{{ ticket.vendor_id }}</td>
											<td>{{ ticket.firstname }}
												{{ ticket.lastname }}</td>
											<td>{{ ticket.subject }}</td>
											<td>{{ ticket.ticket_category }}</td>
											<td>{{ ticket.message }}</td>
											{# <td>
																						                {% if ticket.image %}
																						                    <img src="{{ ticket.image }}" width="70" alt="Ticket Image">
																						                {% else %}
																						                    No Image
																						                {% endif %}
																						             </td> #}
											<td>{{ ticket.status }}</td>
											<td class="rounded-pill">{{ ticket.date_added }}</td>
											<td>
												<a href="{{ ticket.view }}" class="btn btn-primary btn-sm">
													<i class="fa fa-eye"></i>
													View Tickets
												</a>
											</td>
										</tr>
									{% endfor %}
								{% else %}
									<tr>
										<td colspan="6" class="text-center">No tickets found.</td>
									</tr>
								{% endif %}
							</tbody>
						</table>
						<div class="row">
							<div class="col-sm-6 text-left">{{ pagination }}</div>
							<div class="col-sm-6 text-right">{{ results }}</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<style>
			.float-right {
				float: right;
			}
			.btn-default {
				background-color: #f4f4f4;
				border-color: #ddd;
				color: #444;
			}
			.btn-default:hover {
				background-color: #e7e7e7;
				border-color: #adadad;
				color: #333;
			}
		</style>

		{{ footer }}
