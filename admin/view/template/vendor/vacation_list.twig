                <th>{{column_processing_order_count}} </th>
                <th>{{column_vacation_start_date}}</th>
                <th>{{column_vacation_end_date}}</th>
                <th>{{column_vacation_reason}}</th>
                <th>{{column_status}}</th>
                <th>{{column_Approval_date}}</th>
                <th class="text-center">{{column_action}}</th>
              </tr>
            </thead>
            <tbody>
              {% if vacations %}
              {% for vacation in vacations %}
              <tr>
         
                <td>{{ vacation.vendor_name }}</td>
                    <td>{{ vacation.processing_order_count }}</td>
             <td>{{ vacation.total_products }}</td>
                <td>{{ vacation.start_date }}</td>
                <td>{{ vacation.end_date }}</td>
                <td>{{ vacation.reason }}</td>
                <td>
                  <span class="label label-{% if vacation.status == 'Approved' %}success{% elseif vacation.status == 'Rejected' %}danger{% else %}warning{% endif %}">
                    {{ vacation.status }}
                  </span>
                </td>
                <td>{{ vacation.date_added }}</td>
                <td class="text-center">
                  <a href="{{ vacation.view }}" class="btn btn-info btn-sm"><i class="fa fa-eye"></i></a>
                  
                  <!-- {% if vacation.status == 'Pending' %}
                  <a href="{{ approve }}&vacation_id={{ vacation.vacation_id }}" class="btn btn-success btn-sm"><i class="fa fa-check"></i></a>
                  <a href="{{ reject }}&vacation_id={{ vacation.vacation_id }}" class="btn btn-danger btn-sm"><i class="fa fa-times"></i></a>
                  {% endif %} -->
                </td>
              </tr>
              {% endfor %}
              {% else %}
              <tr>
                <td colspan="8" class="text-center">No vacation requests found.</td>
              </tr>
              {% endif %}
            </tbody>
          </table>
        </div>

        {% if pagination %}
        <div class="row">
          <div class="col-sm-6 text-left">{{ pagination }}</div>
          <div class="col-sm-6 text-right">{{ results }}</div>
        </div>
        {% endif %}
