<script>
	$(document).on('click', '.btn-view-comment', function () {
		var productId = $(this).data('product-id');
	
		$.ajax({
			url: 'index.php?route=vendor/product/getCommentThread&user_token={{ user_token }}&product_id=' + productId,
			method: 'GET',
			dataType: 'json',
			success: function (json) {
				let html = '';
				if (json.length) {
					json.forEach(function (item) {
						html += `<p><strong>${item.comment_by.toUpperCase()}</strong>: ${item.comment} <br><small>${item.date_added}</small></p><hr>`;
					});
				} else {
					html = '<p>No comments yet.</p>';
				}
				$('#comment-thread-body').html(html);
				$('#commentModal').modal('show');
			}
		});
	});
	
	$(document).on('click', '.btn-edit-comment', function () {
		const productId = $(this).data('product-id');
		const existing = $(this).closest('td').find('.truncate-comment').text();
		const newComment = prompt("Edit comment for Product ID " + productId + ":", existing);
		if (newComment !== null) {
			$.post('index.php?route=vendor/product/saveComment&user_token={{ user_token }}', {
				product_id: productId,
				comment: newComment
			}, function (response) {
				alert(response.success || 'Comment saved!');
				location.reload();
			}, 'json');
		}
	});
	</script>
	
