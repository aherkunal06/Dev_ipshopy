  <script type="text/javascript">
    // Get user token from the template
    var token = '{{ user_token }}';
    
    // Check if token exists and is valid
    if (!token || token === '') {
        console.error('User token is not defined. Please refresh the page.');
        // Disable delete buttons if token is missing
        $('.btn-danger').prop('disabled', true);
    }

    // Define the confirmDelete function
    window.confirmDelete = function(categoryId) {
        if (!token || token === '') {
            alert('Session expired. Please refresh the page.');
            return;
        }

        if (confirm('Are you sure you want to delete this category?')) {
            // First check for child categories
            $.ajax({
                url: 'index.php?route=vendor/category_management/checkCategoryChildren&user_token=' + token + '&category_id=' + categoryId,
                type: 'GET',
                dataType: 'json',
                beforeSend: function() {
                    $('.alert').remove();
                },
                success: function(response) {
                    if (response.has_children === false) {
                        // If no children, proceed with deletion
                        console.log("Starting deletion for category: " + categoryId);
                        $.ajax({
                            url: 'index.php?route=vendor/category_management/delete&user_token=' + token + '&category_id=' + categoryId,
                            type: 'GET',
                            dataType: 'json',
                            success: function(deleteResponse) {
                                if (deleteResponse.success) {
                                    alert('Category deleted successfully!');
                                    location.reload();
                                } else {
                                    alert('Error deleting category: ' + (deleteResponse.error || 'Unknown error'));
                                }
                            },
                            error: function(xhr, ajaxOptions, thrownError) {
                                alert('Error deleting category: ' + thrownError);
                            }
                        });
                    } else {
                        alert('Cannot delete this category. First delete all its subcategories.');
                    }
                },
                error: function(xhr, ajaxOptions, thrownError) {
                    alert('Error checking category: ' + thrownError);
                }
            });
        }
    };
  </script>
  
