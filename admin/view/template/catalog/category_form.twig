'#input-level2', '#input-level3', '#input-level4'
], ['#level2-group', '#level3-group', '#level4-group']);

if (parentId > 0) {
loadSubCategories(parentId, '#input-level2', '#level2-group');
}
});

// ---------- Level 2 Change ----------
$('#input-level2').on('change', function () {
var parentId = $(this).val();
resetLevels([
'#input-level3', '#input-level4'
], ['#level3-group', '#level4-group']);

if (parentId > 0) {
loadSubCategories(parentId, '#input-level3', '#level3-group');
}
});

// ---------- Level 3 Change ----------
$('#input-level3').on('change', function () {
var parentId = $(this).val();
resetLevels(['#input-level4'], ['#level4-group']);

if (parentId > 0) {
loadSubCategories(parentId, '#input-level4', '#level4-group');
}
});

// ---------- Utility: Reset Inputs & Hide ----------
function resetLevels(inputs, groups) {
inputs.forEach(id => $(id).html('<option value="0"> {{ text_select }}</option>'));
groups.forEach(id => $(id).hide());
}

